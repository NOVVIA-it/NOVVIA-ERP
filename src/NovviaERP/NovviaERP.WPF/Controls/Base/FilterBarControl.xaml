<UserControl x:Class="NovviaERP.WPF.Controls.Base.FilterBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="{DynamicResource FilterBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="15,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Filter-Bereich links -->
            <StackPanel x:Name="pnlFilter" Orientation="Horizontal">
                <!-- Suchfeld -->
                <TextBox x:Name="txtSuche" Width="250" Padding="8,6" VerticalContentAlignment="Center"
                         KeyDown="TxtSuche_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Suchen..." Foreground="#999" Margin="10,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Suchen Button -->
                <Button x:Name="btnSuchen" Content="Suchen" Padding="12,6" Margin="8,0,0,0"
                        Background="{DynamicResource PrimaryBrush}" Foreground="White"
                        BorderThickness="0" Click="Suchen_Click" Cursor="Hand"/>

                <!-- Zeitraum Filter -->
                <ComboBox x:Name="cmbZeitraum" Width="140" Margin="15,0,0,0" Padding="8,6"/>

                <!-- Dynamische Filter (werden programmatisch hinzugefuegt) -->
                <StackPanel x:Name="pnlExtraFilter" Orientation="Horizontal"/>
            </StackPanel>

            <!-- Aktionen rechts -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock x:Name="txtAnzahl" VerticalAlignment="Center" Foreground="{DynamicResource MutedTextBrush}" Margin="0,0,15,0"/>
                <Button x:Name="btnNeu" Content="+ Neu" Padding="15,8" Background="{DynamicResource PrimaryBrush}" Foreground="White"
                        FontWeight="SemiBold" BorderThickness="0" Click="Neu_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
