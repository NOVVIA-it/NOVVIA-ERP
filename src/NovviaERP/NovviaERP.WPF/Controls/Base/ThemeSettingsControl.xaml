<UserControl x:Class="NovviaERP.WPF.Controls.Base.ThemeSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Farbeinstellungen" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

        <!-- Primaerfarbe -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Primaerfarbe (Buttons):" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPrimaryColor" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectPrimary" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <!-- Sekundaerfarbe -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Sekundaerfarbe:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSecondaryColor" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectSecondary" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <!-- Hintergrund Header -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Header-Hintergrund:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtHeaderBg" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectHeaderBg" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <!-- Filter Hintergrund -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Filter-Hintergrund:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFilterBg" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectFilterBg" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <!-- Rahmenfarbe -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Rahmenfarbe:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtBorderColor" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectBorder" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <!-- Status-Farben -->
        <TextBlock Text="Status-Farben" FontWeight="SemiBold" Margin="0,15,0,10"/>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Erfolg (gruen):" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSuccessColor" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectSuccess" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Warnung (gelb):" VerticalAlignment="Center"/>
            <TextBox x:Name="txtWarningColor" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectWarning" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Fehler (rot):" VerticalAlignment="Center"/>
            <TextBox x:Name="txtDangerColor" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectDanger" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Info (blau):" VerticalAlignment="Center"/>
            <TextBox x:Name="txtInfoColor" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectInfo" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <!-- DataGrid -->
        <TextBlock Text="DataGrid" FontWeight="SemiBold" Margin="0,15,0,10"/>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Alternierende Zeile:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtAlternateRow" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectAlternateRow" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Ausgewaehlte Zeile:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSelectedRow" Grid.Column="1" Padding="6,4" TextChanged="Color_Changed"/>
            <Rectangle x:Name="rectSelectedRow" Grid.Column="2" Width="30" Height="24" Margin="10,0,0,0"
                       Stroke="#ccc" StrokeThickness="1"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="Anwenden" Padding="20,8" Click="Anwenden_Click"
                    Background="#0078D4" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>
            <Button Content="Speichern" Padding="20,8" Margin="10,0,0,0" Click="Speichern_Click"/>
            <Button Content="Zuruecksetzen" Padding="20,8" Margin="10,0,0,0" Click="Zuruecksetzen_Click"/>
        </StackPanel>

        <!-- Vorschau -->
        <TextBlock Text="Vorschau" FontWeight="SemiBold" Margin="0,25,0,10"/>
        <Border x:Name="previewBorder" BorderThickness="1" Padding="15">
            <StackPanel>
                <Button x:Name="previewButton" Content="Beispiel-Button" Padding="15,8" HorizontalAlignment="Left"/>
                <TextBlock x:Name="previewHeader" Text="Ueberschrift" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBlock x:Name="previewText" Text="Normaler Text"/>
                <TextBlock x:Name="previewMuted" Text="Gedaempfter Text"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
