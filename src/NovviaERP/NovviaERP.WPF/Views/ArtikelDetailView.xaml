<UserControl x:Class="NovviaERP.WPF.Views.ArtikelDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="ZurÃ¼ck" Click="Zurueck_Click" Padding="10,5"/>
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtTitel" Text="Artikel" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSubtitel" Text="" FontSize="12" Foreground="#666"/>
                </StackPanel>
                <TextBlock x:Name="txtArtNr" Grid.Column="2" FontSize="16" Foreground="#0078D4"
                           FontWeight="SemiBold" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Inhalt -->
        <TabControl x:Name="tabControl" Grid.Row="1" Margin="20,15,20,0" SelectionChanged="TabControl_SelectionChanged">
            <!-- Tab: Grunddaten -->
            <TabItem Header="Grunddaten">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte -->
                        <StackPanel>
                            <TextBlock Text="Identifikation" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Artikelnummer:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtArtNrEdit" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Barcode/EAN:" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtBarcode" Grid.Row="1" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Hersteller-Nr:" Grid.Row="2" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtHAN" Grid.Row="2" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Suchbegriffe:" Grid.Row="3" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtSuchbegriffe" Grid.Row="3" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Sortierung:" Grid.Row="4" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtSortierung" Grid.Row="4" Grid.Column="1" Height="28" Width="80" HorizontalAlignment="Left"/>
                            </Grid>

                            <TextBlock Text="Beschreibung" FontWeight="SemiBold" FontSize="14" Margin="0,25,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Name:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtName" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Beschreibung:" Grid.Row="1" VerticalAlignment="Top" Margin="0,5,0,0"/>
                                <TextBox x:Name="txtBeschreibung" Grid.Row="1" Grid.Column="1" Height="80"
                                         AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                            </Grid>
                        </StackPanel>

                        <!-- Rechte Spalte -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Preise" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="VK Netto:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtVKNetto" Grid.Column="1" Height="28"/>
                                <TextBlock Text="EUR" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                                <TextBlock Text="UVP:" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtUVP" Grid.Row="1" Grid.Column="1" Height="28"/>
                                <TextBlock Text="EUR" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                                <TextBlock Text="EK Netto:" Grid.Row="2" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtEKNetto" Grid.Row="2" Grid.Column="1" Height="28"/>
                                <TextBlock Text="EUR" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>
                            </Grid>

                            <TextBlock Text="Klassifikation" FontWeight="SemiBold" FontSize="14" Margin="0,25,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Hersteller:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbHersteller" Grid.Column="1" Height="28"
                                          DisplayMemberPath="CName" SelectedValuePath="KHersteller"/>

                                <TextBlock Text="Steuerklasse:" Grid.Row="1" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbSteuerklasse" Grid.Row="1" Grid.Column="1" Height="28"
                                          DisplayMemberPath="CName" SelectedValuePath="KSteuerklasse"/>
                            </Grid>

                            <TextBlock Text="Status" FontWeight="SemiBold" FontSize="14" Margin="0,25,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Aktiv:" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkAktiv" Grid.Column="1" IsChecked="True" VerticalAlignment="Center"/>

                                <TextBlock Text="Top-Artikel:" Grid.Row="1" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkTopArtikel" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                <TextBlock Text="MHD-Pflichtig:" Grid.Row="2" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkMHD" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- MSV3-Bestaende -->
                            <Border x:Name="pnlMSV3" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1"
                                    CornerRadius="4" Padding="15" Margin="0,25,0,0" Visibility="Collapsed">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="MSV3-Verfuegbarkeit" FontWeight="SemiBold" FontSize="14" Foreground="#1565C0"/>
                                        <Button x:Name="btnMSV3Refresh" Content="Aktualisieren" Click="MSV3Refresh_Click"
                                                Padding="8,2" Margin="15,0,0,0" FontSize="11"/>
                                    </StackPanel>
                                    <ItemsControl x:Name="lstMSV3Bestaende">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" BorderBrush="#BBDEFB" BorderThickness="1"
                                                        CornerRadius="3" Padding="10,8" Margin="0,0,0,5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding LieferantName}" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding StatusText}" FontSize="11" Foreground="#666"/>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                            <TextBlock Text="{Binding BestandText}" FontSize="16" FontWeight="Bold"
                                                                       Foreground="{Binding BestandFarbe}" HorizontalAlignment="Right"/>
                                                            <TextBlock Text="{Binding PreisText}" FontSize="11" Foreground="#666"
                                                                       HorizontalAlignment="Right"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock x:Name="txtMSV3Status" Text="" FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Lager + Chargen -->
            <TabItem Header="Lager" x:Name="tabChargen">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Lagereinstellungen -->
                    <StackPanel MaxWidth="400" HorizontalAlignment="Left">
                        <TextBlock Text="Lagereinstellungen" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Bestand:" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtBestand" Grid.Column="1" VerticalAlignment="Center"
                                       FontSize="16" FontWeight="SemiBold"/>

                            <TextBlock Text="Mindestbestand:" Grid.Row="1" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                <TextBox x:Name="txtMindestbestand" Width="80" Height="28"/>
                                <TextBlock Text="Stueck" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>
                            </StackPanel>

                            <TextBlock Text="Lagerartikel:" Grid.Row="2" VerticalAlignment="Center"/>
                            <CheckBox x:Name="chkLagerartikel" Grid.Row="2" Grid.Column="1" IsChecked="True" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                    <!-- Chargen-Ueberschrift -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,25,0,15">
                        <TextBlock Text="Chargenbestaende" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock x:Name="txtChargenAnzahl" Text="" FontSize="12" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>

                    <!-- Chargen DataGrid mit Summenzeile -->
                    <Grid Grid.Row="2" MinHeight="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="dgChargen" AutoGenerateColumns="False" IsReadOnly="True"
                                  SelectionMode="Single" SelectionUnit="FullRow"
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                  BorderThickness="1" BorderBrush="#ddd"
                                  RowBackground="White" AlternatingRowBackground="#fafafa">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ChargenNr" Binding="{Binding CChargenNr}" Width="120" FontWeight="SemiBold"/>
                                <DataGridTextColumn Header="Lager" Binding="{Binding CLagerName}" Width="100"/>
                                <DataGridTextColumn Header="Bestand" Binding="{Binding FBestand, StringFormat=N0}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="MHD" Binding="{Binding DMHD, StringFormat=dd.MM.yyyy}" Width="90"/>
                                <DataGridTextColumn Header="Rest Tage" Binding="{Binding NTageRestMHD}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CMHDStatus}" Value="Abgelaufen">
                                                    <Setter Property="Foreground" Value="#dc3545"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CMHDStatus}" Value="Bald ablaufend">
                                                    <Setter Property="Foreground" Value="#ffc107"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Status" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#28a745"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NGesperrt}" Value="True">
                                                                <Setter Property="Background" Value="#dc3545"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding NQuarantaene}" Value="True">
                                                                <Setter Property="Background" Value="#6c757d"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Sperrgrund" Binding="{Binding CSperrgrund}" Width="150"/>
                                <DataGridTextColumn Header="Eingang" Binding="{Binding DEingang, StringFormat=dd.MM.yyyy}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Summenzeile Chargen -->
                        <Border Grid.Row="1" Background="#e8f4fc" BorderBrush="#0078D4" BorderThickness="1,0,1,1" Padding="10,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="txtChargenSummeAnzahl" Text="0 Chargen" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="Summe Bestand:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="txtChargenSummeBestand" Text="0" FontWeight="Bold" Width="80" TextAlignment="Right" VerticalAlignment="Center" Foreground="#0078D4"/>
                                    <TextBlock Text="Stueck" VerticalAlignment="Center" Foreground="#666" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Tab: Chargen-Ausgaenge (Rueckrufverfolgung) -->
            <TabItem Header="Chargen-Ausgaenge" x:Name="tabChargenAusgaenge">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Chargen-Ausgaenge (Rueckrufverfolgung)" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock x:Name="txtAusgaengeAnzahl" Text="" FontSize="12" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>

                    <DataGrid x:Name="dgChargenAusgaenge" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              BorderThickness="1" BorderBrush="#ddd"
                              RowBackground="White" AlternatingRowBackground="#fafafa">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum" Binding="{Binding DAusgang, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTextColumn Header="ChargenNr" Binding="{Binding CChargenNr}" Width="120" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="MHD" Binding="{Binding DMHD, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTextColumn Header="Menge" Binding="{Binding FMenge, StringFormat=N0}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Lieferschein" Binding="{Binding CLieferscheinNr}" Width="120"/>
                            <DataGridTextColumn Header="Auftrag" Binding="{Binding CBestellNr}" Width="100"/>
                            <DataGridTextColumn Header="Kd-Nr" Binding="{Binding CKundenNr}" Width="80"/>
                            <DataGridTextColumn Header="Kunde" Binding="{Binding KundeName}" Width="*"/>
                            <DataGridTextColumn Header="Ort" Binding="{Binding KundeOrt}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Summenzeile -->
                    <Border Grid.Row="2" Background="#e8f4fc" BorderBrush="#0078D4" BorderThickness="1,0,1,1" Padding="10,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="txtAusgaengeSummeAnzahl" Text="0 Ausgaenge" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Summe Menge:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock x:Name="txtAusgaengeSummeMenge" Text="0" FontWeight="Bold" Width="80" TextAlignment="Right" VerticalAlignment="Center" Foreground="#0078D4"/>
                                <TextBlock Text="Stueck" VerticalAlignment="Center" Foreground="#666" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab: Kundengruppen-Preise -->
            <TabItem Header="Kundenpreise" x:Name="tabKundenpreise">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Preise nach Kundengruppen" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>

                    <DataGrid x:Name="dgKundenPreise" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="False"
                              SelectionMode="Single" SelectionUnit="FullRow" CanUserAddRows="False" CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              BorderThickness="1" BorderBrush="#ddd"
                              RowBackground="White" AlternatingRowBackground="#f8f9fa"
                              RowHeight="36" MaxWidth="600" HorizontalAlignment="Left">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#f5f5f5"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderBrush" Value="#ddd"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Kundengruppe" Binding="{Binding CKundengruppe}" Width="200" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="VK Netto (EUR)" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FNettoPreis, StringFormat=N2}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                                   FontWeight="SemiBold" Foreground="#0078D4" Padding="8,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding FNettoPreis, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                                 HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                                                 BorderThickness="1" Padding="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Rabatt %" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Padding="8,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding FProzent, StringFormat=N1}"/>
                                                    <Setter Property="Foreground" Value="#666"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FProzent}" Value="0">
                                                            <Setter Property="Foreground" Value="#ccc"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding FProzent, StringFormat=N1, UpdateSourceTrigger=PropertyChanged}"
                                                 HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                                                 BorderThickness="1" Padding="5,3"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
                        <Button Content="Kundenpreise speichern" Click="KundenpreiseSpeichern_Click" Padding="15,8"
                                Background="#0078D4" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab: Validierung (Eigene Felder) -->
            <TabItem Header="Validierung">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="400" HorizontalAlignment="Left">
                        <!-- Validierung GroupBox -->
                        <GroupBox Header="Validierung" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="chkValAmbient" Content="Ambient" Margin="0,5,0,10"/>
                                <CheckBox x:Name="chkValCool" Content="Cool" Margin="0,0,0,10"/>
                                <CheckBox x:Name="chkValMedcan" Content="Medcan" Margin="0,0,0,10"/>
                                <CheckBox x:Name="chkValTierarznei" Content="Tierarznei" Margin="0,0,0,10"/>
                                <CheckBox x:Name="chkValSecurPharm" Content="SecurPharm" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Speichern Button -->
                        <Button Content="Eigene Felder speichern" Click="EigeneFelderSpeichern_Click"
                                Padding="15,8" HorizontalAlignment="Left" Margin="0,10,0,0"
                                Background="#0078D4" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="" Foreground="#666" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Abbrechen" Click="Zurueck_Click" Padding="20,8" Margin="0,0,10,0"/>
                    <Button Content="Speichern" Click="Speichern_Click" Padding="20,8"
                            Background="#0078D4" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
