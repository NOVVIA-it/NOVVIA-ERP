<Window x:Class="NovviaERP.WPF.Views.AuftragsstapelimportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auftragsimport" Height="800" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#F0F0F0">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="FieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Kunde auswaehlen -->
        <GroupBox Grid.Row="0" Header="Kunde (optional - wenn nicht in Excel)" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnKundeAuswaehlen" Content="Kunde suchen..." Click="KundeAuswaehlen_Click"
                        Padding="15,8" Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
                <Border Grid.Column="1" BorderBrush="#ccc" BorderThickness="1" Margin="10,0" Padding="10,5" Background="White">
                    <StackPanel>
                        <TextBlock x:Name="txtSelectedKundeName" Text="(kein Kunde ausgewaehlt)" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtSelectedKundeDetails" Text="" Foreground="Gray" FontSize="11"/>
                    </StackPanel>
                </Border>
                <Button Grid.Column="2" x:Name="btnKundeEntfernen" Content="X" Click="KundeEntfernen_Click"
                        Width="30" Height="30" Visibility="Collapsed" Background="#dc3545" Foreground="White" BorderThickness="0"/>
            </Grid>
        </GroupBox>

        <!-- Einstellungen -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="28"/>
                <RowDefinition Height="28"/>
            </Grid.RowDefinitions>

            <!-- Anz. Lieferungen -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Anz. Lieferungen" Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtAnzLieferungen" Text="999" Style="{StaticResource FieldStyle}" Width="60" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="0" Grid.Column="3" Text="(Zahlungsart/Lieferbedingung aus Kunde)" Foreground="#666" VerticalAlignment="Center"/>

            <!-- Stapelverarbeitung -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Stapelverarbeitung" Style="{StaticResource LabelStyle}"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" x:Name="cboStapelverarbeitung" Style="{StaticResource ComboStyle}">
                <ComboBoxItem Content="verfügbare Mengen liefern" IsSelected="True"/>
                <ComboBoxItem Content="nur vollständige Aufträge"/>
                <ComboBoxItem Content="Teillieferung erlauben"/>
            </ComboBox>

            <!-- Mindest-MHD -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Mindest-MHD" Style="{StaticResource LabelStyle}"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal">
                <DatePicker x:Name="dpMindestMHD" Width="120" VerticalContentAlignment="Center"/>
                <TextBlock Text="oder" VerticalAlignment="Center" Margin="10,0"/>
                <TextBox x:Name="txtMHDOffset" Width="50" Style="{StaticResource FieldStyle}"
                         ToolTip="z.B. 6M = 6 Monate, 90T = 90 Tage"/>
                <ComboBox x:Name="cboMHDEinheit" Width="80" Style="{StaticResource ComboStyle}" Margin="5,0,0,0">
                    <ComboBoxItem Content="Monate" IsSelected="True"/>
                    <ComboBoxItem Content="Tage"/>
                </ComboBox>
                <TextBlock Text="ab heute" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#666"/>
            </StackPanel>
        </Grid>

        <!-- Excel-Import Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
            <Button x:Name="btnExcelImport" Click="ExcelImport_Click" Padding="15,10" Background="White" BorderBrush="#ccc">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/excel.png" Width="32" Height="32" Margin="0,0,8,0"/>
                    <TextBlock Text="Excel-Import" VerticalAlignment="Center" FontSize="14" Foreground="#217346"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Zusatztext -->
        <GroupBox Grid.Row="3" Header="Zusatztext" Margin="0,5,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <RadioButton x:Name="rbUeberPositionen" Content="über Positionen einfügen" IsChecked="True" Margin="0,0,30,0"/>
                    <RadioButton x:Name="rbUnterPositionen" Content="unter Positionen einfügen"/>
                </StackPanel>
                <TextBox Grid.Row="1" x:Name="txtZusatztext" AcceptsReturn="True" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" Margin="10,0,10,10"/>
            </Grid>
        </GroupBox>

        <!-- Import-Vorschau -->
        <GroupBox Grid.Row="4" Header="Importierte Positionen" MinHeight="200">
            <DataGrid x:Name="dgPositionen" AutoGenerateColumns="False" IsReadOnly="True"
                      GridLinesVisibility="All" HeadersVisibility="Column"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      VerticalScrollBarVisibility="Auto" MinHeight="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Adress-Nr." Binding="{Binding AdressNr}" Width="80"/>
                    <DataGridTextColumn Header="Kunde" Binding="{Binding KundeName}" Width="150"/>
                    <DataGridTextColumn Header="Art-Nr." Binding="{Binding ArtNr}" Width="100"/>
                    <DataGridTextColumn Header="Artikelname" Binding="{Binding ArtikelName}" Width="*"/>
                    <DataGridTextColumn Header="Menge" Binding="{Binding Menge}" Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Preis" Binding="{Binding Preis, StringFormat=N2}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Status -->
        <Grid Grid.Row="5" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Import-Datei:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtImportDatei" Text="" Foreground="#666"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Positionen importiert:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtPositionenCount" Text="0" Foreground="#666"/>
            </StackPanel>
            <ProgressBar x:Name="pbProgress" Grid.Row="1" Height="20" Margin="0,25,0,0" Visibility="Collapsed"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
            <Button x:Name="btnSpeichern" Content="Speichern" Click="Speichern_Click"
                    Padding="15,8" IsEnabled="False" Background="#28a745" Foreground="White" BorderThickness="0"/>
            <Button Content="Hilfe" Padding="15,8" Margin="10,0,0,0"/>
            <Button Content="Schliessen" Click="Schliessen_Click" Padding="15,8" Margin="10,0,0,0"
                    Background="#dc3545" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
