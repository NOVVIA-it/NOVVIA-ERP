<Window x:Class="NovviaERP.WPF.Views.ProfilManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NOVVIA ERP - Profilverwaltung" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F0F0F0"
        ResizeMode="CanResizeWithGrip">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Linke Seite: Profil-Liste -->
        <Border Grid.Column="0" Background="#2D2D30" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#1E1E1E" Padding="20">
                    <StackPanel>
                        <TextBlock Text="NOVVIA ERP" FontSize="24" FontWeight="Light" Foreground="White"/>
                        <TextBlock Text="Profilverwaltung" FontSize="12" Foreground="#888"/>
                    </StackPanel>
                </Border>
                
                <!-- Profil-Liste -->
                <ListBox Grid.Row="1" x:Name="lstProfile" Background="Transparent" BorderThickness="0"
                         SelectionChanged="LstProfile_SelectionChanged" Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" Margin="0,2" CornerRadius="4"
                                    Background="#3E3E42" Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Ellipse Width="8" Height="8" Fill="{Binding StatusFarbe}" 
                                             VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ServerKurz}" Foreground="#888" FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" Margin="10">
                    <Button Content="+ Neues Profil" Height="35" Margin="0,0,0,5" 
                            Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"
                            Click="BtnNeuesProfil_Click"/>
                    <Button Content="🗑️ Löschen" Height="30" 
                            Background="#4E4E52" Foreground="White" BorderThickness="0"
                            Click="BtnProfilLoeschen_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Rechte Seite: Profil-Details -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Profil konfigurieren -->
            <TextBlock Grid.Row="0" Text="Profil konfigurieren" FontSize="24" 
                       Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,20"/>
            
            <!-- Name & Beschreibung -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Profilname" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtProfilName" FontSize="14" Padding="10" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Beschreibung" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtBeschreibung" FontSize="14" Padding="10"/>
                </StackPanel>
            </Border>
            
            <!-- SQL Server -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="SQL Server Verbindung" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Server:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="txtServer" Padding="8" Margin="0,0,0,10"
                                 Text="24.134.81.65,2107\NOVVIAS05"/>
                        
                        <TextBlock Grid.Row="1" Text="SQL-Benutzer:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtSqlUser" Padding="8" Margin="0,0,0,10"
                                 Text="NOVVIA_SQL"/>
                        
                        <TextBlock Grid.Row="2" Text="SQL-Passwort:" VerticalAlignment="Center"/>
                        <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="txtSqlPass" Padding="8"/>
                    </Grid>
                    
                    <Button Content="🔌 Verbindung testen" Width="150" Height="32" Margin="0,15,0,0"
                            HorizontalAlignment="Left" Click="BtnTestVerbindung_Click"/>
                    <TextBlock x:Name="txtVerbindungsStatus" Margin="0,10,0,0" FontSize="12"/>
                </StackPanel>
            </Border>
            
            <!-- Mandanten -->
            <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="20" MinHeight="180">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="100"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Verfügbare Mandanten" FontWeight="SemiBold" FontSize="14"/>
                        <Button Content="🔄 Aktualisieren" Width="100" Height="26" Margin="20,0,0,0"
                                Click="BtnMandantenLaden_Click"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" x:Name="dgMandanten" AutoGenerateColumns="False" 
                              IsReadOnly="True" BorderThickness="1" BorderBrush="#DDD"
                              GridLinesVisibility="Horizontal" RowHeight="40">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding Aktiv}" Width="50"/>
                            <DataGridTextColumn Header="Mandant" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Datenbank" Binding="{Binding Datenbank}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Speichern -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Abbrechen" Width="100" Height="35" Margin="0,0,10,0"
                        IsCancel="True" Click="BtnAbbrechen_Click"/>
                <Button Content="💾 Speichern" Width="130" Height="35"
                        FontWeight="SemiBold" Click="BtnSpeichern_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{DynamicResource PrimaryBrush}" CornerRadius="4" Padding="10,5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  TextBlock.Foreground="White"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#106EBE"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
        </ScrollViewer>
    </Grid>
</Window>
