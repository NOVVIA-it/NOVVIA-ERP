<Page x:Class="NovviaERP.WPF.Views.ArtikelDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Artikel" Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="ZurÃ¼ck" Click="Zurueck_Click" Padding="10,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtTitel" Text="Neuer Artikel" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSubtitel" Text="" FontSize="12" Foreground="#666"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="txtArtNr" Text="" FontSize="16" Foreground="#0078D4"
                               FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabs -->
        <TabControl Grid.Row="1" Margin="20,15,20,0" x:Name="tabControl">

            <!-- Tab: Grunddaten -->
            <TabItem Header="Grunddaten">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte: Identifikation -->
                        <StackPanel>
                            <TextBlock Text="Identifikation" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Artikelnummer:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtArtNrEdit" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Barcode/EAN:" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtBarcode" Grid.Row="1" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Hersteller-Nr:" Grid.Row="2" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtHAN" Grid.Row="2" Grid.Column="1" Height="28"/>

                                <TextBlock Text="ISBN:" Grid.Row="3" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtISBN" Grid.Row="3" Grid.Column="1" Height="28"/>

                                <TextBlock Text="UPC:" Grid.Row="4" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtUPC" Grid.Row="4" Grid.Column="1" Height="28"/>

                                <TextBlock Text="ASIN:" Grid.Row="5" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtASIN" Grid.Row="5" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Suchbegriffe:" Grid.Row="6" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtSuchbegriffe" Grid.Row="6" Grid.Column="1" Height="28" Tag="Kommagetrennt"/>
                            </Grid>

                            <TextBlock Text="Beschreibung" FontWeight="SemiBold" FontSize="14" Margin="0,25,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Name:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtName" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Kurzbeschr.:" Grid.Row="1" VerticalAlignment="Top" Margin="0,5,0,0"/>
                                <TextBox x:Name="txtKurzBeschreibung" Grid.Row="1" Grid.Column="1" Height="60"
                                         AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                                <TextBlock Text="Beschreibung:" Grid.Row="2" VerticalAlignment="Top" Margin="0,10,0,0"/>
                                <TextBox x:Name="txtBeschreibung" Grid.Row="2" Grid.Column="1" Height="100" Margin="0,5,0,0"
                                         AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                            </Grid>
                        </StackPanel>

                        <!-- Rechte Spalte: Klassifikation -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Klassifikation" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Hersteller:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbHersteller" Grid.Column="1" Height="28"
                                          DisplayMemberPath="CName" SelectedValuePath="KHersteller"/>

                                <TextBlock Text="Warengruppe:" Grid.Row="1" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbWarengruppe" Grid.Row="1" Grid.Column="1" Height="28"
                                          DisplayMemberPath="CName" SelectedValuePath="KWarengruppe"/>

                                <TextBlock Text="Steuerklasse:" Grid.Row="2" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbSteuerklasse" Grid.Row="2" Grid.Column="1" Height="28"
                                          DisplayMemberPath="CName" SelectedValuePath="KSteuerklasse"/>

                                <TextBlock Text="SEO-Pfad:" Grid.Row="3" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtSeo" Grid.Row="3" Grid.Column="1" Height="28"/>
                            </Grid>

                            <TextBlock Text="Status" FontWeight="SemiBold" FontSize="14" Margin="0,25,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Aktiv:" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkAktiv" Grid.Column="1" IsChecked="True" VerticalAlignment="Center"/>

                                <TextBlock Text="Top-Artikel:" Grid.Row="1" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkTopArtikel" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                <TextBlock Text="Neu:" Grid.Row="2" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkNeu" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                                <TextBlock Text="Teilbar:" Grid.Row="3" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkTeilbar" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Text="Tracking" FontWeight="SemiBold" FontSize="14" Margin="0,25,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="MHD:" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkMHD" Grid.Column="1" VerticalAlignment="Center"/>

                                <TextBlock Text="Charge:" Grid.Row="1" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkCharge" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                <TextBlock Text="Seriennummer:" Grid.Row="2" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkSeriennummer" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Preise -->
            <TabItem Header="Preise">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte -->
                        <StackPanel>
                            <TextBlock Text="Verkaufspreise" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="VK Netto:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtVKNetto" Grid.Column="1" Height="28"/>
                                <TextBlock Text="EUR" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                                <TextBlock Text="UVP:" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtUVP" Grid.Row="1" Grid.Column="1" Height="28"/>
                                <TextBlock Text="EUR" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>
                            </Grid>
                        </StackPanel>

                        <!-- Rechte Spalte -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Einkaufspreise" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="EK Netto:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtEKNetto" Grid.Column="1" Height="28"/>
                                <TextBlock Text="EUR" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                                <TextBlock Text="Letzter EK:" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtLetzterEK" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Foreground="#666"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Lager -->
            <TabItem Header="Lager">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte -->
                        <StackPanel>
                            <TextBlock Text="Lagereinstellungen" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Bestand:" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtBestand" Grid.Column="1" VerticalAlignment="Center"
                                           FontSize="16" FontWeight="SemiBold"/>

                                <TextBlock Text="Mindestbestand:" Grid.Row="1" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="txtMindestbestand" Width="80" Height="28"/>
                                    <TextBlock Text="Stueck" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>
                                </StackPanel>

                                <TextBlock Text="Packeinheit:" Grid.Row="2" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="txtPackeinheit" Width="60" Height="28" Text="1"/>
                                    <TextBlock Text="Stueck" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>
                                </StackPanel>

                                <TextBlock Text="Lagerartikel:" Grid.Row="3" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkLagerartikel" Grid.Row="3" Grid.Column="1" IsChecked="True" VerticalAlignment="Center"/>

                                <TextBlock Text="Lager aktiv:" Grid.Row="4" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkLagerAktiv" Grid.Row="4" Grid.Column="1" IsChecked="True" VerticalAlignment="Center"/>

                                <TextBlock Text="Unter Null verkaufen:" Grid.Row="5" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkUnterNull" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Rechte Spalte: Bestand pro Lager -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Bestand pro Lager" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <DataGrid x:Name="dgLagerbestaende" Height="200" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Lager" Binding="{Binding LagerName}" Width="150"/>
                                    <DataGridTextColumn Header="Bestand" Binding="{Binding Bestand, StringFormat=N0}" Width="80"/>
                                    <DataGridTextColumn Header="Reserviert" Binding="{Binding Reserviert, StringFormat=N0}" Width="80"/>
                                    <DataGridTextColumn Header="Verfuegbar" Binding="{Binding Verfuegbar, StringFormat=N0}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Masse/Gewicht -->
            <TabItem Header="Masse/Gewicht">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="500" HorizontalAlignment="Left">
                        <TextBlock Text="Masse und Gewicht" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Gewicht:" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtGewicht" Grid.Column="1" Height="28"/>
                            <TextBlock Text="kg" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                            <TextBlock Text="Artikelgewicht:" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtArtGewicht" Grid.Row="1" Grid.Column="1" Height="28"/>
                            <TextBlock Text="kg (netto)" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                            <TextBlock Text="Breite:" Grid.Row="2" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtBreite" Grid.Row="2" Grid.Column="1" Height="28"/>
                            <TextBlock Text="cm" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                            <TextBlock Text="Hoehe:" Grid.Row="3" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtHoehe" Grid.Row="3" Grid.Column="1" Height="28"/>
                            <TextBlock Text="cm" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>

                            <TextBlock Text="Laenge:" Grid.Row="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtLaenge" Grid.Row="4" Grid.Column="1" Height="28"/>
                            <TextBlock Text="cm" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>
                        </Grid>

                        <TextBlock Text="Zoll" FontWeight="SemiBold" FontSize="14" Margin="0,30,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Zolltarifnr:" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtTaric" Grid.Column="1" Height="28" Tag="Taric-Code"/>

                            <TextBlock Text="Herkunftsland:" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtHerkunftsland" Grid.Row="1" Grid.Column="1" Height="28" Width="80" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Lieferanten -->
            <TabItem Header="Lieferanten">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Artikel-Lieferanten" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                    <DataGrid x:Name="dgLieferanten" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Lieferant" Binding="{Binding LieferantName}" Width="200"/>
                            <DataGridTextColumn Header="Lieferanten-ArtNr" Binding="{Binding CArtNr}" Width="120"/>
                            <DataGridTextColumn Header="EK Netto" Binding="{Binding FEKNetto, StringFormat=N2}" Width="90"/>
                            <DataGridTextColumn Header="Prioritaet" Binding="{Binding NPrioritaet}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="txtKeineLieferanten" Grid.Row="1" Text="Keine Lieferanten zugeordnet"
                               Foreground="#888" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>

            <!-- Tab: Statistik -->
            <TabItem Header="Statistik">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Artikelstatistik" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Erstellt am:" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtErstelldatum" Grid.Column="1" VerticalAlignment="Center"/>

                            <TextBlock Text="Geaendert am:" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAenderungsdatum" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer mit Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="" Foreground="#666" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Abbrechen" Click="Zurueck_Click" Padding="20,8" Margin="0,0,10,0"/>
                    <Button Content="Speichern" Click="Speichern_Click" Padding="20,8"
                            Background="#0078D4" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
