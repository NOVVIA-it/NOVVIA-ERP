<UserControl x:Class="NovviaERP.WPF.Views.ArtikelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NovviaERP.WPF.Converters"
             Background="#f5f5f5">
    <UserControl.Resources>
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Artikel" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="+ Neuer Artikel" Click="Neu_Click"
                            Background="#0078D4" Foreground="White" Padding="15,8"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter & Suche -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtSuche" Width="280" Height="32" Padding="10,5"
                         VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"
                         Text="" Tag="Suche: Art-Nr, Barcode, Name, HAN..."/>

                <Button Grid.Column="1" Content="Suchen" Click="Suchen_Click"
                        Margin="10,0" Padding="15,5" Background="#0078D4"
                        Foreground="White" BorderThickness="0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Warengruppe:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="cmbWarengruppe" Width="150" Height="32"
                              DisplayMemberPath="CName" SelectedValuePath="KWarengruppe"
                              SelectionChanged="Filter_Changed">
                        <ComboBox.Items>
                            <ComboBoxItem Content="Alle Warengruppen" IsSelected="True"/>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="15,0,0,0">
                    <TextBlock Text="Hersteller:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="cmbHersteller" Width="150" Height="32"
                              DisplayMemberPath="CName" SelectedValuePath="KHersteller"
                              SelectionChanged="Filter_Changed">
                        <ComboBox.Items>
                            <ComboBoxItem Content="Alle Hersteller" IsSelected="True"/>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>

                <CheckBox x:Name="chkNurAktive" Grid.Column="4" Content="Nur aktive"
                          IsChecked="True" VerticalAlignment="Center" Margin="20,0,0,0"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                <CheckBox x:Name="chkUnterMindest" Grid.Column="5" Content="Unter Mindestbestand"
                          VerticalAlignment="Center" Margin="20,0,0,0"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                <Button Grid.Column="7" Content="Aktualisieren" Click="Aktualisieren_Click"
                        Padding="15,5" Background="#f0f0f0" BorderThickness="1" BorderBrush="#ccc"/>
            </Grid>
        </Border>

        <!-- Artikelliste -->
        <DataGrid x:Name="dgArtikel" Grid.Row="2" Margin="20,15,20,0"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  BorderThickness="1" BorderBrush="#ddd"
                  RowBackground="White" AlternatingRowBackground="#fafafa"
                  MouseDoubleClick="DG_DoubleClick" SelectionChanged="DG_SelectionChanged">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Bearbeiten" Click="ContextMenu_Bearbeiten_Click"/>
                    <MenuItem Header="Duplizieren" Click="ContextMenu_Duplizieren_Click"/>
                    <Separator/>
                    <MenuItem Header="Neuen Artikel erstellen" Click="ContextMenu_NeuErstellen_Click" FontWeight="SemiBold"/>
                    <MenuItem Header="Artikel aktualisieren" Click="ContextMenu_Aktualisieren_Click"/>
                    <Separator/>
                    <MenuItem Header="Lagerbestand anpassen" Click="ContextMenu_Lagerbestand_Click"/>
                    <MenuItem Header="Preise bearbeiten" Click="ContextMenu_Preise_Click"/>
                    <Separator/>
                    <MenuItem Header="Artikel deaktivieren" Click="ContextMenu_Deaktivieren_Click"/>
                    <MenuItem Header="Artikel lÃ¶schen" Click="ContextMenu_Loeschen_Click" Foreground="Red"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#f8f8f8"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#ddd"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Art-Nr." Binding="{Binding CArtNr}" Width="110"/>
                <DataGridTextColumn Header="Barcode" Binding="{Binding CBarcode}" Width="120"/>
                <DataGridTextColumn Header="Bezeichnung" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Hersteller" Binding="{Binding Hersteller}" Width="120"/>
                <DataGridTextColumn Header="Bestand" Binding="{Binding NLagerbestand, StringFormat=N0}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UnterMindestbestand}" Value="True">
                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Min." Binding="{Binding NMidestbestand, StringFormat=N0}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                            <Setter Property="Foreground" Value="#888"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="VK Netto" Binding="{Binding FVKNetto, StringFormat=N2}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="EK Netto" Binding="{Binding FEKNetto, StringFormat=N2}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                            <Setter Property="Foreground" Value="#666"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Aktiv" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="12" Height="12" HorizontalAlignment="Center"
                                     Fill="{Binding Aktiv, Converter={StaticResource BoolToColorConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Statusleiste -->
        <Border Grid.Row="3" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Bearbeiten" Click="Bearbeiten_Click"
                            Padding="12,5" Margin="0,0,10,0" x:Name="btnBearbeiten" IsEnabled="False"/>
                    <Button Content="Lagerbestand" Click="Lagerbestand_Click"
                            Padding="12,5" Margin="0,0,10,0" x:Name="btnLager" IsEnabled="False"/>
                    <Button Content="Preise" Click="Preise_Click"
                            Padding="12,5" x:Name="btnPreise" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
