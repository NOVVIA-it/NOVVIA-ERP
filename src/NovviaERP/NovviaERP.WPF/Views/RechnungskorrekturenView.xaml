<UserControl x:Class="NovviaERP.WPF.Views.RechnungskorrekturenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:NovviaERP.WPF.Controls"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Rechnungskorrekturen / Gutschriften" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtSuche" Width="250" Height="32" Padding="10,5" Margin="0,0,10,0"
                             VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"/>
                    <Button Content="Suchen" Click="Suchen_Click" Padding="15,5" Background="#0078D4" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hauptbereich -->
        <Grid x:Name="contentGrid" Grid.Row="1" Margin="15,10,15,10">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="korrekturenRow" Height="2*" MinHeight="100"/>
                <RowDefinition Height="8"/>
                <RowDefinition x:Name="positionenRow" Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!-- Korrekturen-Grid -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <controls:NovviaGrid x:Name="dgKorrekturen"
                                     ViewName="RechnungskorrekturenView"
                                     ShowDateFilter="True"
                                     DateFilterMode="MonthNavigator"
                                     DatePropertyName="DErstellt"
                                     AnzahlText="Korrekturen"
                                     ItemDoubleClick="DG_DoubleClick"
                                     ItemSelected="DG_SelectionChanged">
                    <DataGridTextColumn Header="Korrekturnr." Binding="{Binding CRechnungskorrekturnummer}" Width="130"/>
                    <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy}" Width="90" SortMemberPath="DErstellt"/>
                    <DataGridTextColumn Header="Rechnungsnr." Binding="{Binding CRechnungsnummer}" Width="120"/>
                    <DataGridTextColumn Header="Kd-Nr." Binding="{Binding CKundeNr}" Width="80"/>
                    <DataGridTextColumn Header="Firma" Binding="{Binding CRechnungsadresseFirma}" Width="180"/>
                    <DataGridTextColumn Header="Kunde" Binding="{Binding KundeName}" Width="150"/>
                    <DataGridTextColumn Header="Kurztext" Binding="{Binding CKurztext}" Width="200"/>
                    <DataGridTextColumn Header="Netto" Binding="{Binding FPreisNetto, StringFormat=N2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Brutto" Binding="{Binding FPreisBrutto, StringFormat=N2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Status" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#ffc107"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NStorno}" Value="True">
                                                    <Setter Property="Background" Value="#dc3545"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Shop" Binding="{Binding CShopname}" Width="100"/>
                    <DataGridTextColumn Header="Bearbeiter" Binding="{Binding CBenutzername}" Width="120"/>
                </controls:NovviaGrid>

                <!-- Summenzeile -->
                <Border Grid.Row="1" Background="#e8f4fc" BorderBrush="#0078D4" BorderThickness="1,0,1,1" Padding="10,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="txtSummeAnzahl" Text="0 Korrekturen geladen" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Summe Netto:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtSummeNetto" Text="0,00" FontWeight="SemiBold" Width="90" TextAlignment="Right" VerticalAlignment="Center"/>
                            <TextBlock Text="Summe Brutto:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                            <TextBlock x:Name="txtSummeBrutto" Text="0,00" FontWeight="Bold" VerticalAlignment="Center" Foreground="#0078D4"/>
                            <TextBlock Text="EUR" VerticalAlignment="Center" Foreground="#666" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Horizontaler Splitter -->
            <GridSplitter Grid.Row="1" Height="8" HorizontalAlignment="Stretch"
                          Background="#a0a0a0" Cursor="SizeNS"
                          ResizeDirection="Rows" ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True" Focusable="False" Panel.ZIndex="100"/>

            <!-- Unterer Bereich: Buttons + Details -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Buttons-Leiste -->
                <Border Grid.Row="0" Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="10,8" Margin="0,0,0,5">
                    <WrapPanel>
                        <Button x:Name="btnOeffnen" Content="Oeffnen" Padding="12,5" Margin="0,0,5,0" Click="Oeffnen_Click" IsEnabled="False"/>
                        <Button x:Name="btnRechnung" Content="Orig. Rechnung" Padding="12,5" Margin="0,0,5,0" Click="Rechnung_Click" IsEnabled="False"/>
                        <Button x:Name="btnKunde" Content="Kunde" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                        <Button x:Name="btnDrucken" Content="Drucken" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                        <Button x:Name="btnStorno" Content="Stornieren" Padding="12,5" Margin="0,0,5,0"
                                Background="#dc3545" Foreground="White" BorderThickness="0" IsEnabled="False"/>
                    </WrapPanel>
                </Border>

                <!-- Details -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Details / Text" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>

                    <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="10">
                        <TextBox x:Name="txtDetails" IsReadOnly="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" BorderThickness="0"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- Statusleiste -->
        <Border Grid.Row="2" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
        </Border>
    </Grid>
</UserControl>
