<Window x:Class="NovviaERP.WPF.Views.AdresseBearbeitenDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adresse bearbeiten" Height="420" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#f5f5f5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtHeader" Text="Adresse bearbeiten" FontSize="16" FontWeight="SemiBold"
                   Foreground="#0078D4" Margin="0,0,0,15"/>

        <!-- Formular -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Firma:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFirma" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Anrede:" Grid.Row="1" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbAnrede" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="100" HorizontalAlignment="Left">
                    <ComboBoxItem Content=""/>
                    <ComboBoxItem Content="Herr"/>
                    <ComboBoxItem Content="Frau"/>
                    <ComboBoxItem Content="Firma"/>
                </ComboBox>

                <TextBlock Text="Vorname:" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtVorname" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Nachname:" Grid.Row="3" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNachname" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Strasse:" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBox x:Name="txtStrasse" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="PLZ / Ort:" Grid.Row="5" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtPLZ" Width="70" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtOrt" Margin="10,0,0,0" Width="200" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Land:" Grid.Row="6" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbLand" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" IsEditable="True">
                    <ComboBoxItem Content="Deutschland" IsSelected="True"/>
                    <ComboBoxItem Content="Oesterreich"/>
                    <ComboBoxItem Content="Schweiz"/>
                    <ComboBoxItem Content="Niederlande"/>
                    <ComboBoxItem Content="Belgien"/>
                    <ComboBoxItem Content="Frankreich"/>
                </ComboBox>

                <TextBlock Text="Telefon:" Grid.Row="7" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTelefon" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left"/>

                <TextBlock Text="E-Mail:" Grid.Row="8" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEmail" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Speichern" Click="Speichern_Click" Padding="20,8" Margin="0,0,10,0"
                    Background="#0078D4" Foreground="White" BorderThickness="0"/>
            <Button Content="Abbrechen" Click="Abbrechen_Click" Padding="15,8" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
