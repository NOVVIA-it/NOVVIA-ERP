<Window x:Class="NovviaERP.WPF.Views.VersandEinstellungenDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Versand-Einstellungen" Height="550" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Versanddienstleister konfigurieren" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- DHL -->
                <GroupBox Header="DHL" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Benutzer:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtDHLUser" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="1" Text="Passwort:" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtDHLPassword" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="2" Text="Profil:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtDHLProfile" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="3" Text="Abrechnungsnr.:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtDHLBillingNumber" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- DPD -->
                <GroupBox Header="DPD" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Benutzer:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtDPDUser" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="1" Text="Passwort:" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtDPDPassword" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="2" Text="Depot:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtDPDDepot" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- GLS -->
                <GroupBox Header="GLS" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Benutzer:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtGLSUser" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="1" Text="Passwort:" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtGLSPassword" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="2" Text="Shipper-ID:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtGLSShipperId" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- UPS -->
                <GroupBox Header="UPS" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="28"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="API-Token:" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtUPSToken" Grid.Column="1" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="1" Text="Account-Nr.:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtUPSAccountNumber" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Abbrechen" Width="100" Height="30" Margin="0,0,10,0" Click="Abbrechen_Click"/>
            <Button Content="Speichern" Width="100" Height="30" Click="Speichern_Click"
                    Background="#28a745" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
