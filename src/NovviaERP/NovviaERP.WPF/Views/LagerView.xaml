<UserControl x:Class="NovviaERP.WPF.Views.LagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Lagerbestand" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Bewegungen" Click="Bewegungen_Click"
                            Background="#6c757d" Foreground="White" Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Lager:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cmbLager" Width="180" Height="32" SelectionChanged="Lager_Changed" DisplayMemberPath="CName" SelectedValuePath="KWarenLager"/>

                <TextBlock Text="Suche:" VerticalAlignment="Center" Margin="20,0,8,0"/>
                <TextBox x:Name="txtSuche" Width="250" Height="32" Padding="10,5"
                         VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"
                         ToolTip="ArtNr, Name oder Barcode"/>
                <Button Content="Suchen" Click="Suchen_Click" Margin="10,0" Padding="15,5" Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>

                <CheckBox x:Name="chkNurMitBestand" Content="Nur mit Bestand" VerticalAlignment="Center" Margin="20,0,0,0"
                          IsChecked="True" Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                <CheckBox x:Name="chkUnterMindest" Content="Unter Mindestbestand" VerticalAlignment="Center" Margin="15,0,0,0"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>
            </StackPanel>
        </Border>

        <!-- Tabs für Bestand / Bewegungen -->
        <TabControl x:Name="tabLager" Grid.Row="2" Margin="20,15,20,0" BorderThickness="1" BorderBrush="#ddd">
            <!-- Tab: Lagerbestand -->
            <TabItem Header="Bestand" Padding="15,5">
                <DataGrid x:Name="dgLagerbestand" AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          RowBackground="White" AlternatingRowBackground="#fafafa"
                          MouseDoubleClick="DG_DoubleClick" SelectionChanged="DG_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ArtNr" Binding="{Binding CArtNr}" Width="120"/>
                        <DataGridTextColumn Header="Artikelname" Binding="{Binding CName}" Width="250"/>
                        <DataGridTextColumn Header="Barcode" Binding="{Binding CBarcode}" Width="120"/>
                        <DataGridTextColumn Header="Lager" Binding="{Binding CLagerName}" Width="120"/>
                        <DataGridTextColumn Header="Verfügbar" Binding="{Binding FVerfuegbar, StringFormat=N0}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IstUnterMindestbestand}" Value="True">
                                            <Setter Property="Foreground" Value="#dc3545"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Reserviert" Binding="{Binding FReserviert, StringFormat=N0}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#ffc107"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Gesamt" Binding="{Binding FGesamt, StringFormat=N0}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Mindest" Binding="{Binding FMindestbestand, StringFormat=N0}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#888"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Hersteller" Binding="{Binding CHersteller}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Tab: Lagerbewegungen -->
            <TabItem Header="Bewegungen" Padding="15,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <TextBlock Text="Zeitraum:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="cmbZeitraum" Width="150" Height="32" SelectionChanged="Zeitraum_Changed">
                            <ComboBoxItem Content="Heute" Tag="0" IsSelected="True"/>
                            <ComboBoxItem Content="Letzte 7 Tage" Tag="7"/>
                            <ComboBoxItem Content="Letzte 30 Tage" Tag="30"/>
                            <ComboBoxItem Content="Letzte 90 Tage" Tag="90"/>
                            <ComboBoxItem Content="Alle" Tag="-1"/>
                        </ComboBox>
                    </StackPanel>

                    <DataGrid x:Name="dgBewegungen" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              RowBackground="White" AlternatingRowBackground="#fafafa">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                            <DataGridTextColumn Header="ArtNr" Binding="{Binding CArtNr}" Width="100"/>
                            <DataGridTextColumn Header="Artikel" Binding="{Binding CArtikelName}" Width="200"/>
                            <DataGridTextColumn Header="Lager" Binding="{Binding CLagerName}" Width="100"/>
                            <DataGridTemplateColumn Header="Menge" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MengeText}" HorizontalAlignment="Right" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FMenge}" Value="0">
                                                            <Setter Property="Foreground" Value="#888"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Typ" Binding="{Binding CTyp}" Width="100"/>
                            <DataGridTextColumn Header="Grund" Binding="{Binding CGrund}" Width="150"/>
                            <DataGridTextColumn Header="Hinweis" Binding="{Binding CHinweis}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Statusleiste -->
        <Border Grid.Row="3" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnArtikelDetail" Content="Artikel oeffnen" Click="ArtikelDetail_Click" Padding="12,5" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
