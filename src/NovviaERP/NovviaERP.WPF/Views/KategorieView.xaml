<UserControl x:Class="NovviaERP.WPF.Views.KategorieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:NovviaERP.WPF.Controls"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Kategorien" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}"/>
                    <TextBlock Text="Verwalten Sie hier Ihre Artikelkategorien" FontSize="12" Foreground="#666"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="+ Neue Kategorie" Click="NeueKategorie_Click" Padding="12,8"
                            Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Kategorie-Baum links -->
            <Border Background="White" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#f8f8f8" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Kategorie-Baum" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtSuche" Margin="0,8,0,0" Padding="8,6"
                                     TextChanged="TxtSuche_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <TreeView x:Name="tvKategorien" Grid.Row="1" BorderThickness="0"
                              SelectedItemChanged="TvKategorien_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Kinder}">
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="{Binding CName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ArtikelAnzahl, StringFormat=' ({0})'}"
                                               Foreground="#888" FontSize="11"/>
                                    <TextBlock Text=" (inaktiv)" Foreground="#c00" FontSize="10"
                                               Visibility="{Binding CAktiv, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#e0e0e0"/>

            <!-- Detail rechts -->
            <Border Grid.Column="2" Background="White" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detail Header -->
                    <Border Background="#f8f8f8" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock x:Name="txtKategorieName" Text="Kategorie auswaehlen"
                                           FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtKategoriePfad" Foreground="#666" FontSize="11"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="btnBearbeiten" Content="Bearbeiten" Click="Bearbeiten_Click"
                                        Padding="10,5" Margin="0,0,5,0" Visibility="Collapsed"/>
                                <Button x:Name="btnLoeschen" Content="Loeschen" Click="Loeschen_Click"
                                        Padding="10,5" Foreground="#c00" Visibility="Collapsed"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Statistik -->
                    <Grid x:Name="pnlStatistik" Grid.Row="1" Margin="15,10" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#E3F2FD" Padding="15,10" CornerRadius="4" Margin="0,0,5,0">
                            <StackPanel>
                                <TextBlock x:Name="txtArtikelAnzahl" Text="0" FontSize="24" FontWeight="Bold" Foreground="#1976D2"/>
                                <TextBlock Text="Artikel" Foreground="#555"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" Background="#E8F5E9" Padding="15,10" CornerRadius="4" Margin="0,0,5,0">
                            <StackPanel>
                                <TextBlock x:Name="txtSubkategorien" Text="0" FontSize="24" FontWeight="Bold" Foreground="#388E3C"/>
                                <TextBlock Text="Unterkategorien" Foreground="#555"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" Background="#FFF3E0" Padding="15,10" CornerRadius="4">
                            <StackPanel>
                                <TextBlock x:Name="txtStatus" Text="-" FontSize="24" FontWeight="Bold" Foreground="#F57C00"/>
                                <TextBlock Text="Status" Foreground="#555"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Artikel-Liste -->
                    <Grid Grid.Row="2" Margin="15,0,15,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Artikel in dieser Kategorie" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <DataGrid x:Name="dgArtikel" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                                  BorderThickness="1" BorderBrush="#ddd" MouseDoubleClick="DgArtikel_DoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Art.-Nr." Binding="{Binding CArtNr}" Width="100"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding CName}" Width="*"/>
                                <DataGridTextColumn Header="VK Netto" Binding="{Binding FVKNetto, StringFormat=N2}" Width="100"/>
                                <DataGridTextColumn Header="Bestand" Binding="{Binding FLagerbestand}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- Platzhalter wenn nichts ausgewaehlt -->
                    <TextBlock x:Name="txtKeinAuswahl" Grid.Row="2" Text="Waehlen Sie eine Kategorie aus dem Baum"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#999" FontSize="14"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="15,10">
            <TextBlock x:Name="txtStatusBar" Text="Bereit" Foreground="#666"/>
        </Border>
    </Grid>
</UserControl>
