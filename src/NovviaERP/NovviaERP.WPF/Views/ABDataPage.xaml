<UserControl x:Class="NovviaERP.WPF.Views.ABDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:NovviaERP.WPF.Controls"
             Background="#f0f2f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="ABData Pharma-Artikeldatenbank" FontSize="28" FontWeight="Bold"/>
            <Border Background="#17a2b8" CornerRadius="3" Padding="8,3" Margin="15,0,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="txtArtikelCount" Text="0 Artikel" Foreground="White" FontSize="11"/>
            </Border>
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15,10" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtSuche" Width="300" Height="35" VerticalContentAlignment="Center"
                             Padding="10,0" KeyDown="Suche_KeyDown"
                             ToolTip="PZN, Name, Hersteller, Wirkstoff..."/>
                    <Button Content="Suchen" Width="80" Margin="10,0" Height="35" Click="Suchen_Click"/>

                    <CheckBox x:Name="chkRezeptpflicht" Content="Rezeptpflichtig" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <CheckBox x:Name="chkBTM" Content="BTM" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <CheckBox x:Name="chkKuehlpflichtig" Content="Kuehlpflichtig" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnImport" Content="CSV/TXT Import" Width="120" Height="35" Margin="0,0,10,0" Click="Import_Click"/>
                    <Button x:Name="btnAutoMapping" Content="Auto-Mapping" Width="110" Height="35" Click="AutoMapping_Click"
                            ToolTip="Verknuepft ABData-PZN automatisch mit JTL-Artikeln"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Haupt-Grid -->
        <ctrl:NovviaGrid x:Name="dgArtikel" Grid.Row="2" Margin="0,15,0,0"
                         MouseDoubleClick="DataGrid_DoubleClick">
            <ctrl:NovviaGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="In JTL-Artikel importieren" Click="ImportToJTL_Click"/>
                    <MenuItem Header="Mit JTL-Artikel verknuepfen" Click="LinkToJTL_Click"/>
                    <Separator/>
                    <MenuItem Header="Details anzeigen" Click="Details_Click"/>
                    <MenuItem Header="PZN kopieren" Click="CopyPZN_Click"/>
                </ContextMenu>
            </ctrl:NovviaGrid.ContextMenu>
            <ctrl:NovviaGrid.Columns>
                <DataGridTextColumn Header="PZN" Binding="{Binding PZN}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily" Value="Consolas"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="Hersteller" Binding="{Binding Hersteller}" Width="150"/>
                <DataGridTextColumn Header="Darreich." Binding="{Binding Darreichungsform}" Width="80"/>
                <DataGridTextColumn Header="Packung" Binding="{Binding Packungsgroesse}" Width="70"/>
                <DataGridTextColumn Header="Wirkstoff" Binding="{Binding Wirkstoff}" Width="150"/>
                <DataGridTextColumn Header="AEP" Binding="{Binding AEP, StringFormat=N2}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="AVP" Binding="{Binding AVP, StringFormat=N2}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="0,0,5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="AEK" Binding="{Binding AEK, StringFormat=N2}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="MwSt" Binding="{Binding MwStDisplay}" Width="50"/>
                <DataGridCheckBoxColumn Header="Rx" Binding="{Binding Rezeptpflicht, Mode=OneWay}" Width="40"/>
                <DataGridCheckBoxColumn Header="BTM" Binding="{Binding BTM, Mode=OneWay}" Width="45"/>
                <DataGridCheckBoxColumn Header="Kuehl" Binding="{Binding Kuehlpflichtig, Mode=OneWay}" Width="50"/>
                <DataGridTextColumn Header="ATC" Binding="{Binding ATC}" Width="90"/>
            </ctrl:NovviaGrid.Columns>
        </ctrl:NovviaGrid>

        <!-- Footer -->
        <Border Grid.Row="3" Background="White" CornerRadius="5" Padding="15,10" Margin="0,10,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtStatus" Foreground="#666" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtLastImport" Foreground="#999" VerticalAlignment="Center" Margin="30,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Import-Historie" Width="120" Height="30" Click="Historie_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
