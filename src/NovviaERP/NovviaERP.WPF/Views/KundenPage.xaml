<Page x:Class="NovviaERP.WPF.Views.KundenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Kunden" Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Kunden" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="+ Neuer Kunde" Click="Neu_Click"
                            Background="#0078D4" Foreground="White" Padding="15,8"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter & Suche -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtSuche" Width="280" Height="32" Padding="10,5"
                         VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"
                         Text="" Tag="Suche: Kd-Nr, Firma, Name, E-Mail, Ort..."/>

                <Button Grid.Column="1" Content="Suchen" Click="Suchen_Click"
                        Margin="10,0" Padding="15,5" Background="#0078D4"
                        Foreground="White" BorderThickness="0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Kundengruppe:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="cmbKundengruppe" Width="160" Height="32"
                              DisplayMemberPath="CName" SelectedValuePath="KKundenGruppe"
                              SelectionChanged="Filter_Changed">
                        <ComboBox.Items>
                            <ComboBoxItem Content="Alle Gruppen" IsSelected="True"/>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>

                <CheckBox x:Name="chkNurAktive" Grid.Column="3" Content="Nur aktive"
                          VerticalAlignment="Center" Margin="20,0,0,0"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                <Button Grid.Column="5" Content="Aktualisieren" Click="Aktualisieren_Click"
                        Padding="15,5" Background="#f0f0f0" BorderThickness="1" BorderBrush="#ccc"/>
            </Grid>
        </Border>

        <!-- Kundenliste -->
        <DataGrid x:Name="dgKunden" Grid.Row="2" Margin="20,15,20,0"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  BorderThickness="1" BorderBrush="#ddd"
                  RowBackground="White" AlternatingRowBackground="#fafafa"
                  MouseDoubleClick="DG_DoubleClick" SelectionChanged="DG_SelectionChanged">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#f8f8f8"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#ddd"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kd-Nr." Binding="{Binding CKundenNr}" Width="90"/>
                <DataGridTextColumn Header="Firma" Binding="{Binding CFirma}" Width="200"/>
                <DataGridTextColumn Header="Nachname" Binding="{Binding CName}" Width="140"/>
                <DataGridTextColumn Header="Vorname" Binding="{Binding CVorname}" Width="100"/>
                <DataGridTextColumn Header="Ort" Binding="{Binding COrt}" Width="130"/>
                <DataGridTextColumn Header="E-Mail" Binding="{Binding CMail}" Width="200"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding CTel}" Width="130"/>
                <DataGridTextColumn Header="Kundengruppe" Binding="{Binding Kundengruppe}" Width="120"/>
                <DataGridTextColumn Header="Umsatz" Binding="{Binding Umsatz, StringFormat=N2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Status" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="12" Height="12" HorizontalAlignment="Center"
                                     Fill="{Binding IstGesperrt, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Invert}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Statusleiste -->
        <Border Grid.Row="3" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Bearbeiten" Click="Bearbeiten_Click"
                            Padding="12,5" Margin="0,0,10,0" IsEnabled="False" x:Name="btnBearbeiten"/>
                    <Button Content="Bestellungen" Click="Bestellungen_Click"
                            Padding="12,5" Margin="0,0,10,0" IsEnabled="False" x:Name="btnBestellungen"/>
                    <Button Content="ZusammenfÃ¼hren" Click="Zusammenfuehren_Click"
                            Padding="12,5" IsEnabled="False" x:Name="btnZusammenfuehren"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
