<Page x:Class="NovviaERP.WPF.Views.BestellungenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Auftraege" Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Auftraege" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="+ Neuer Auftrag" Click="Neu_Click"
                            Background="#0078D4" Foreground="White" Padding="15,8"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtSuche" Width="280" Height="32" Padding="10,5"
                         VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"
                         Tag="Suche: Bestellnr, Kundennr, Firma, Name..."/>

                <Button Grid.Column="1" Content="Suchen" Click="Suchen_Click"
                        Margin="10,0" Padding="15,5" Background="#0078D4"
                        Foreground="White" BorderThickness="0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="cmbStatus" Width="130" Height="32" SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="Alle" IsSelected="True"/>
                        <ComboBoxItem Content="Offen" Tag="Offen"/>
                        <ComboBoxItem Content="In Bearbeitung" Tag="In Bearbeitung"/>
                        <ComboBoxItem Content="Bezahlt" Tag="Bezahlt"/>
                        <ComboBoxItem Content="Versendet" Tag="Versendet"/>
                        <ComboBoxItem Content="Storniert" Tag="Storniert"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="15,0,0,0">
                    <TextBlock Text="Von:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dpVon" Width="110" Height="32" SelectedDateChanged="Filter_Changed"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="10,0,0,0">
                    <TextBlock Text="Bis:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker x:Name="dpBis" Width="110" Height="32" SelectedDateChanged="Filter_Changed"/>
                </StackPanel>

                <CheckBox x:Name="chkNurOffene" Grid.Column="5" Content="Nur offene"
                          VerticalAlignment="Center" Margin="20,0,0,0"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>

                <Button Grid.Column="7" Content="Aktualisieren" Click="Aktualisieren_Click"
                        Padding="15,5" Background="#f0f0f0" BorderThickness="1" BorderBrush="#ccc"/>
            </Grid>
        </Border>

        <!-- Bestellungsliste -->
        <DataGrid x:Name="dgBestellungen" Grid.Row="2" Margin="20,15,20,0"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  HeadersVisibility="Column" BorderThickness="0"
                  MouseDoubleClick="DG_DoubleClick" SelectionChanged="DG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bestellnr." Binding="{Binding CBestellNr}" Width="100"/>
                <DataGridTextColumn Header="Externe Nr." Binding="{Binding CInetBestellNr}" Width="110"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy HH:mm}" Width="120" SortMemberPath="DErstellt" CanUserSort="True"/>
                <DataGridTextColumn Header="Kd-Nr." Binding="{Binding CKundenNr}" Width="80"/>
                <DataGridTextColumn Header="Firma" Binding="{Binding KundeFirma}" Width="180"/>
                <DataGridTextColumn Header="Name" Binding="{Binding KundeName}" Width="140"/>
                <DataGridTextColumn Header="Netto" Binding="{Binding GesamtNetto, StringFormat=N2}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Brutto" Binding="{Binding GesamtBrutto, StringFormat=N2}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding CStatus}" Width="100"/>
                <DataGridTextColumn Header="Shop" Binding="{Binding ShopName}" Width="100"/>
                <DataGridTemplateColumn Header="Bezahlt" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="12" Height="12" HorizontalAlignment="Center"
                                     Fill="{Binding Bezahlt, Converter={StaticResource BoolToColorConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Versendet" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="12" Height="12" HorizontalAlignment="Center"
                                     Fill="{Binding Versendet, Converter={StaticResource BoolToColorConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Statusleiste -->
        <Border Grid.Row="3" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Details" Click="Details_Click"
                            Padding="12,5" Margin="0,0,10,0" IsEnabled="False" x:Name="btnDetails"/>
                    <Button Content="Rechnung" Click="Rechnung_Click"
                            Padding="12,5" Margin="0,0,10,0" IsEnabled="False" x:Name="btnRechnung"/>
                    <Button Content="Lieferschein" Click="Lieferschein_Click"
                            Padding="12,5" Margin="0,0,10,0" IsEnabled="False" x:Name="btnLieferschein"/>
                    <Button Content="Versenden" Click="Versenden_Click"
                            Padding="12,5" IsEnabled="False" x:Name="btnVersenden"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
