<Window x:Class="NovviaERP.WPF.Views.AnsprechpartnerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ansprechpartner" Height="380" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#f5f5f5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtHeader" Text="Ansprechpartner bearbeiten" FontSize="16" FontWeight="SemiBold"
                   Foreground="#0078D4" Margin="0,0,0,15"/>

        <!-- Formular -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Anrede:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbAnrede" Grid.Column="1" VerticalAlignment="Center" Width="100" HorizontalAlignment="Left">
                    <ComboBoxItem Content=""/>
                    <ComboBoxItem Content="Herr"/>
                    <ComboBoxItem Content="Frau"/>
                </ComboBox>

                <TextBlock Text="Vorname:" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox x:Name="txtVorname" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>

                <TextBlock Text="Nachname:" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNachname" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>

                <TextBlock Text="Abteilung:" Grid.Row="3" VerticalAlignment="Center"/>
                <TextBox x:Name="txtAbteilung" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>

                <TextBlock Text="Telefon:" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTelefon" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock Text="Mobil:" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMobil" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center"/>

                <TextBlock Text="Fax:" Grid.Row="5" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFax" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="E-Mail:" Grid.Row="6" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEmail" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Speichern" Click="Speichern_Click" Padding="20,8" Margin="0,0,10,0"
                    Background="#0078D4" Foreground="White" BorderThickness="0"/>
            <Button Content="Abbrechen" Click="Abbrechen_Click" Padding="15,8" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
