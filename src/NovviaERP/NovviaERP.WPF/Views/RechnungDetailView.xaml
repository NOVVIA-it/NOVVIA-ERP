<UserControl x:Class="NovviaERP.WPF.Views.RechnungDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal">
            <Button Content="Zurueck" Width="80" Click="Zurueck_Click" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtHeader" Text="Rechnung" FontSize="28" FontWeight="Bold" Margin="20,0,0,0"/>
            <Border x:Name="brdStatus" CornerRadius="4" Padding="10,4" Margin="15,0,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="txtStatus" FontWeight="SemiBold"/>
            </Border>
        </StackPanel>

        <!-- Rechnungskopf Info -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Margin="0,15,0,0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Spalte 1: Rechnungsdaten -->
                <StackPanel>
                    <TextBlock Text="Rechnungsdaten" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Rechnungs-Nr:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtRechnungsNr" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Datum:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtDatum"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Faellig:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtFaellig"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Bestellung:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtBestellNr"/>
                    </StackPanel>
                </StackPanel>

                <!-- Spalte 2: Kunde -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Rechnungsempfaenger" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtKundeFirma" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtKundeAdresse"/>
                    <TextBlock x:Name="txtKundePLZOrt"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Kunden-Nr:" Width="80" Foreground="#666"/>
                        <TextBlock x:Name="txtKundenNr"/>
                    </StackPanel>
                </StackPanel>

                <!-- Spalte 3: Betraege -->
                <Border Grid.Column="2" Background="#f8f9fa" CornerRadius="6" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Betraege" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="1"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Netto:" Foreground="#666"/>
                            <TextBlock x:Name="txtNetto" Grid.Column="1" HorizontalAlignment="Right"/>
                            <TextBlock Text="MwSt:" Grid.Row="1" Foreground="#666"/>
                            <TextBlock x:Name="txtMwSt" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>
                            <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#ddd" Margin="0,5"/>
                            <TextBlock Text="Brutto:" Grid.Row="3" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="txtBrutto" Grid.Row="3" Grid.Column="1" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right"/>
                            <TextBlock Text="Offen:" Grid.Row="4" Foreground="#dc3545"/>
                            <TextBlock x:Name="txtOffen" Grid.Row="4" Grid.Column="1" Foreground="#dc3545" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Positionen -->
        <Border Grid.Row="2" Background="White" CornerRadius="6" Margin="0,15,0,0" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Rechnungspositionen" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <DataGrid x:Name="dgPositionen" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" BorderThickness="1" BorderBrush="#ddd">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pos" Binding="{Binding Pos}" Width="40"/>
                        <DataGridTextColumn Header="Art-Nr." Binding="{Binding ArtNr}" Width="100"/>
                        <DataGridTextColumn Header="Bezeichnung" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Menge" Binding="{Binding Menge, StringFormat=N2}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Einzelpreis" Binding="{Binding PreisNetto, StringFormat=N2}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Rabatt %" Binding="{Binding Rabatt, StringFormat=N1}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="MwSt %" Binding="{Binding MwStSatz, StringFormat=N1}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Gesamt" Binding="{Binding Gesamt, StringFormat=N2}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Zahlungen -->
        <Border Grid.Row="3" Background="White" CornerRadius="6" Margin="0,15,0,0" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Zahlungseingaenge" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <DataGrid x:Name="dgZahlungen" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" BorderThickness="1" BorderBrush="#ddd" MaxHeight="150">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Betrag" Binding="{Binding Betrag, StringFormat=N2}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Zahlungsart" Binding="{Binding Zahlungsart}" Width="120"/>
                        <DataGridTextColumn Header="Referenz" Binding="{Binding Referenz}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer Aktionen -->
        <Border Grid.Row="4" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="PDF erstellen" Width="120" Margin="0,0,10,0" Click="PDF_Click"/>
                <Button Content="Drucken" Width="100" Margin="0,0,10,0" Click="Drucken_Click"/>
                <Button Content="E-Mail senden" Width="120" Margin="0,0,10,0" Click="Email_Click"/>
                <Button x:Name="btnZahlung" Content="Zahlung erfassen" Width="130" Click="ZahlungErfassen_Click"
                        Background="#28a745" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
