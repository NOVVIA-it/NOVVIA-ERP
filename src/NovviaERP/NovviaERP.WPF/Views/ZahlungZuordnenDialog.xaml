<Window x:Class="NovviaERP.WPF.Views.ZahlungZuordnenDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zahlung zuordnen" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zahlungs-Info -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Zu ordnende Zahlung" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Datum:" Width="100" Foreground="#666"/>
                        <TextBlock x:Name="txtDatum" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Name:" Width="100" Foreground="#666"/>
                        <TextBlock x:Name="txtName" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="IBAN:" Width="100" Foreground="#666"/>
                        <TextBlock x:Name="txtIBAN"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Verwendungszweck:" Width="100" Foreground="#666"/>
                        <TextBlock x:Name="txtVzweck" TextWrapping="Wrap" MaxWidth="400"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Betrag" Foreground="#666" FontSize="11"/>
                    <TextBlock x:Name="txtBetrag" FontSize="28" FontWeight="Bold" Foreground="#28a745"/>
                    <TextBlock Text="EUR" Foreground="#666" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Suche -->
        <Border Grid.Row="1" Background="#f8f8f8" Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Rechnung suchen:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtSuche" Width="300" Padding="8,5"
                         KeyUp="Suche_KeyUp"/>
                <Button Content="Suchen" Click="Suchen_Click" Padding="15,5" Margin="10,0,0,0"
                        Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Rechnungsliste -->
        <DataGrid x:Name="dgRechnungen" Grid.Row="2" Margin="20,10"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  RowBackground="White" AlternatingRowBackground="#fafafa"
                  MouseDoubleClick="DG_DoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rechnungsnr" Binding="{Binding CRechnungsnummer}" Width="120"/>
                <DataGridTextColumn Header="Kunde" Binding="{Binding KundeDisplay}" Width="*"/>
                <DataGridTextColumn Header="Kundennr" Binding="{Binding CKundenNr}" Width="100"/>
                <DataGridTextColumn Header="Brutto" Binding="{Binding Brutto, StringFormat=N2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Offen" Binding="{Binding Offen, StringFormat=N2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#dc3545"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="White" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Zuordnungsbetrag:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtZuordnungsbetrag" Width="100" Padding="8,5" TextAlignment="Right"/>
                    <TextBlock Text="EUR" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#666"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Abbrechen" Click="Abbrechen_Click"
                        Padding="20,8" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Zuordnen" Click="Zuordnen_Click"
                        Padding="20,8" Background="#28a745" Foreground="White" BorderThickness="0"
                        IsEnabled="False" x:Name="btnZuordnen"/>
            </Grid>
        </Border>
    </Grid>
</Window>
