<UserControl x:Class="NovviaERP.WPF.Views.BestellungenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NovviaERP.WPF.Converters"
             Background="#f5f5f5">
    <UserControl.Resources>
        <conv:BestellStatusConverter x:Key="StatusConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Bestellungen" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Excel-Import" Click="Import_Click"
                            Background="#217346" Foreground="White" Padding="15,8" BorderThickness="0" Margin="0,0,10,0"/>
                    <Button Content="+ Neue Bestellung" Click="Neu_Click"
                            Background="#0078D4" Foreground="White" Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cmbStatus" Width="150" Height="32" SelectionChanged="Status_Changed">
                    <ComboBoxItem Content="Alle" Tag="" IsSelected="True"/>
                    <ComboBoxItem Content="Offen" Tag="Offen"/>
                    <ComboBoxItem Content="In Bearbeitung" Tag="In Bearbeitung"/>
                    <ComboBoxItem Content="Bezahlt" Tag="Bezahlt"/>
                    <ComboBoxItem Content="Versendet" Tag="Versendet"/>
                    <ComboBoxItem Content="Storniert" Tag="Storniert"/>
                </ComboBox>
                <TextBox x:Name="txtSuche" Width="250" Height="32" Padding="10,5" Margin="20,0,0,0"
                         VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"/>
                <Button Content="Suchen" Click="Suchen_Click" Margin="10,0" Padding="15,5" Background="#0078D4" Foreground="White" BorderThickness="0"/>
                <Button Content="Aktualisieren" Click="Aktualisieren_Click" Padding="15,5" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Bestellungsliste mit Summenzeile -->
        <Grid Grid.Row="2" Margin="20,15,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <DataGrid x:Name="dgBestellungen"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  BorderThickness="1" BorderBrush="#ddd"
                  RowBackground="White" AlternatingRowBackground="#fafafa"
                  MouseDoubleClick="DG_DoubleClick" SelectionChanged="DG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Best-Nr." Binding="{Binding CBestellNr}" Width="100"/>
                <DataGridTextColumn Header="Externe Nr." Binding="{Binding CInetBestellNr}" Width="120"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy}" Width="90"/>
                <DataGridTextColumn Header="Kunde" Binding="{Binding KundeName}" Width="200"/>
                <DataGridTextColumn Header="Firma" Binding="{Binding KundeFirma}" Width="180"/>
                <DataGridTextColumn Header="Netto" Binding="{Binding GesamtNetto, StringFormat=N2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Brutto" Binding="{Binding GesamtBrutto, StringFormat=N2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Status" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#6c757d"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CStatus}" Value="Offen">
                                                <Setter Property="Background" Value="#ffc107"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CStatus}" Value="In Bearbeitung">
                                                <Setter Property="Background" Value="#17a2b8"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CStatus}" Value="Bezahlt">
                                                <Setter Property="Background" Value="#28a745"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CStatus}" Value="Versendet">
                                                <Setter Property="Background" Value="#007bff"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CStatus}" Value="Storniert">
                                                <Setter Property="Background" Value="#dc3545"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding CStatus}" Foreground="White" FontSize="11"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Shop" Binding="{Binding ShopName}" Width="100"/>
                <!-- Rechnungsadresse -->
                <DataGridTextColumn Header="Re-Firma" Binding="{Binding ReFirma}" Width="150" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-Name" Binding="{Binding ReName}" Width="120" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-Vorname" Binding="{Binding ReVorname}" Width="100" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-Strasse" Binding="{Binding ReStrasse}" Width="150" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-PLZ" Binding="{Binding RePlz}" Width="60" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-Ort" Binding="{Binding ReOrt}" Width="120" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-Land" Binding="{Binding ReLand}" Width="50" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-Mail" Binding="{Binding ReMail}" Width="180" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Re-Tel" Binding="{Binding ReTel}" Width="120" Visibility="Collapsed"/>
                <!-- Lieferadresse -->
                <DataGridTextColumn Header="Li-Firma" Binding="{Binding LiFirma}" Width="150" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Li-Name" Binding="{Binding LiName}" Width="120" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Li-Vorname" Binding="{Binding LiVorname}" Width="100" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Li-Strasse" Binding="{Binding LiStrasse}" Width="150" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Li-PLZ" Binding="{Binding LiPlz}" Width="60" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Li-Ort" Binding="{Binding LiOrt}" Width="120" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Li-Land" Binding="{Binding LiLand}" Width="50" Visibility="Collapsed"/>
                <!-- Texte -->
                <DataGridTextColumn Header="Anmerkung" Binding="{Binding CAnmerkung}" Width="200" Visibility="Collapsed"/>
            </DataGrid.Columns>
        </DataGrid>

            <!-- Summenzeile -->
            <Border Grid.Row="1" Background="#e8f4fc" BorderBrush="#0078D4" BorderThickness="1,0,1,1" Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="txtSummeAnzahl" Text="0 Bestellungen" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Summe Netto:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtSummeNetto" Text="0,00" FontWeight="SemiBold" Width="100" TextAlignment="Right" VerticalAlignment="Center"/>
                        <TextBlock Text="EUR" VerticalAlignment="Center" Foreground="#666" Margin="5,0,20,0"/>
                        <TextBlock Text="Brutto:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtSummeBrutto" Text="0,00" FontWeight="Bold" Width="100" TextAlignment="Right" VerticalAlignment="Center" Foreground="#0078D4"/>
                        <TextBlock Text="EUR" VerticalAlignment="Center" Foreground="#666" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Statusleiste -->
        <Border Grid.Row="3" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnBearbeiten" Content="Bearbeiten" Click="Bearbeiten_Click" Padding="12,5" IsEnabled="False"/>
                    <Button x:Name="btnRechnung" Content="Rechnung" Click="Rechnung_Click" Padding="12,5" Margin="10,0,0,0" IsEnabled="False"/>
                    <Button x:Name="btnLieferschein" Content="Lieferschein" Click="Lieferschein_Click" Padding="12,5" Margin="10,0,0,0" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
