<UserControl x:Class="NovviaERP.WPF.Views.BestellungenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NovviaERP.WPF.Converters"
             xmlns:controls="clr-namespace:NovviaERP.WPF.Controls"
             Background="#f5f5f5">
    <UserControl.Resources>
        <conv:BestellStatusConverter x:Key="StatusConverter"/>
        <conv:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Auftraege" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtSuche" Width="250" Height="32" Padding="10,5" Margin="0,0,10,0"
                             VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"/>
                    <Button Content="Suchen" Click="Suchen_Click" Padding="15,5" Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0" Margin="0,0,20,0"/>
                    <Button Content="Excel-Import" Click="Import_Click"
                            Background="#217346" Foreground="White" Padding="15,8" BorderThickness="0" Margin="0,0,10,0"/>
                    <Button Content="+ Neuer Auftrag" Click="Neu_Click"
                            Background="{DynamicResource PrimaryBrush}" Foreground="White" Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hauptbereich -->
        <Grid x:Name="contentGrid" Grid.Row="1" Margin="15,10,15,10">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="auftraegeRow" Height="2*" MinHeight="100"/>
                <RowDefinition Height="8"/>
                <RowDefinition x:Name="positionenRow" Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!-- Auftrags-Grid -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <controls:NovviaGrid x:Name="dgBestellungen"
                                     ViewName="BestellungenView"
                                     ShowDateFilter="True"
                                     DateFilterMode="MonthNavigator"
                                     DatePropertyName="DErstellt"
                                     AnzahlText="Auftraege"
                                     ItemDoubleClick="DG_DoubleClick"
                                     ItemSelected="DG_SelectionChanged">
                    <DataGridTextColumn Header="Auftrags-Nr." Binding="{Binding CBestellNr}" Width="100"/>
                    <DataGridTextColumn Header="Erstellt am" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy}" Width="90" SortMemberPath="DErstellt"/>
                    <DataGridTextColumn Header="Externe Nr." Binding="{Binding CInetBestellNr}" Width="100"/>
                    <DataGridTextColumn Header="Kunden-Nr." Binding="{Binding CKundenNr}" Width="80"/>
                    <DataGridTextColumn Header="Firma" Binding="{Binding KundeFirma}" Width="180"/>
                    <DataGridTextColumn Header="Kunde" Binding="{Binding KundeName}" Width="150"/>
                    <DataGridTextColumn Header="Anmerkung" Binding="{Binding CAnmerkung}" Width="200"/>
                    <DataGridTextColumn Header="Netto" Binding="{Binding GesamtNetto, StringFormat=N2}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Brutto" Binding="{Binding GesamtBrutto, StringFormat=N2}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Ist bezahlt" Binding="{Binding Bezahlt}" Width="80"/>
                    <DataGridTextColumn Header="Offener Betrag" Binding="{Binding OffenerBetrag, StringFormat=N2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Status" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#6c757d"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CStatus}" Value="Offen">
                                                    <Setter Property="Background" Value="#ffc107"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CStatus}" Value="In Bearbeitung">
                                                    <Setter Property="Background" Value="#17a2b8"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CStatus}" Value="Bezahlt">
                                                    <Setter Property="Background" Value="#28a745"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CStatus}" Value="Versendet">
                                                    <Setter Property="Background" Value="#007bff"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CStatus}" Value="Storniert">
                                                    <Setter Property="Background" Value="#dc3545"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding CStatus}" Foreground="White" FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Zahlungsart" Binding="{Binding CZahlungsart}" Width="120"/>
                    <DataGridTextColumn Header="Versandart" Binding="{Binding CVersandart}" Width="120"/>
                    <DataGridTextColumn Header="Shop" Binding="{Binding ShopName}" Width="100"/>
                    <!-- Rechnungsadresse -->
                    <DataGridTextColumn Header="Re-Firma" Binding="{Binding ReFirma}" Width="150" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Re-Name" Binding="{Binding ReName}" Width="120" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Re-PLZ" Binding="{Binding RePlz}" Width="60" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Re-Ort" Binding="{Binding ReOrt}" Width="120" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Re-Mail" Binding="{Binding ReMail}" Width="180" Visibility="Collapsed"/>
                    <!-- Lieferadresse -->
                    <DataGridTextColumn Header="Li-Firma" Binding="{Binding LiFirma}" Width="150" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Li-Name" Binding="{Binding LiName}" Width="120" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Li-PLZ" Binding="{Binding LiPlz}" Width="60" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Li-Ort" Binding="{Binding LiOrt}" Width="120" Visibility="Collapsed"/>
                </controls:NovviaGrid>

                <!-- Summenzeile -->
                <Border Grid.Row="1" Background="#e8f4fc" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="1,0,1,1" Padding="10,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="txtSummeAnzahl" Text="0 Auftraege geladen" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Summe:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtSummeBrutto" Text="0,00 EUR" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Horizontaler Splitter -->
            <GridSplitter Grid.Row="1" Height="8" HorizontalAlignment="Stretch"
                          Background="#a0a0a0" Cursor="SizeNS"
                          ResizeDirection="Rows" ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True" Focusable="False" Panel.ZIndex="100"/>

            <!-- Unterer Bereich: Buttons + Positionen -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Buttons-Leiste (wie JTL) -->
                <Border Grid.Row="0" Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="10,8" Margin="0,0,0,5">
                <WrapPanel>
                    <Button x:Name="btnAuftrag" Content="Auftrag" Padding="12,5" Margin="0,0,5,0" Click="Bearbeiten_Click" IsEnabled="False"/>
                    <Button x:Name="btnAusgabe" Content="Ausgabe" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                    <Button x:Name="btnKunde" Content="Kunde" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                    <Button x:Name="btnRechnungErstellen" Content="Rechnung erstellen" Padding="12,5" Margin="0,0,5,0"
                            Background="#28a745" Foreground="White" BorderThickness="0" Click="Rechnung_Click" IsEnabled="False"/>
                    <Button x:Name="btnZusammenfassen" Content="Zusammenfassen" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                    <Button x:Name="btnZahlung" Content="Zahlung..." Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                    <Button x:Name="btnAusliefern" Content="Ausliefern..." Padding="12,5" Margin="0,0,5,0" Click="Lieferschein_Click" IsEnabled="False"/>
                    <Button x:Name="btnVersandinfo" Content="Versandinfo..." Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                    <Button Content="Storno" Padding="12,5" Margin="0,0,5,0" Background="#dc3545" Foreground="White" BorderThickness="0" IsEnabled="False"/>
                    <Button Content="Nachricht an Kunde..." Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                </WrapPanel>
            </Border>

                <!-- Positionen -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Positionen" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>

                <DataGrid x:Name="dgPositionen" Grid.Row="1"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          HeadersVisibility="Column" BorderThickness="1" BorderBrush="#ddd">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Artikelnr." Binding="{Binding CArtNr}" Width="100"/>
                        <DataGridTextColumn Header="Positionsname" Binding="{Binding CName}" Width="*" MinWidth="200"/>
                        <DataGridTextColumn Header="Menge" Binding="{Binding FAnzahl, StringFormat=N0}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Einheit" Binding="{Binding CEinheit}" Width="60"/>
                        <DataGridTextColumn Header="Netto-VK" Binding="{Binding FVKNetto, StringFormat=N2}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Brutto-VK" Binding="{Binding FVKBrutto, StringFormat=N2}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Rabatt %" Binding="{Binding FRabatt, StringFormat=N1}" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="MwSt. %" Binding="{Binding FMwSt, StringFormat=N0}" Width="55">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Summe" Binding="{Binding Summe, StringFormat=N2}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Statusleiste -->
        <Border Grid.Row="2" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
        </Border>
    </Grid>
</UserControl>
