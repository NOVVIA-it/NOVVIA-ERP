<Window x:Class="NovviaERP.WPF.Views.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auftrags-Import" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner" Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“¥ Auftrags-Import" FontSize="22" FontWeight="Light"/>
            <TextBlock Text="CSV/Excel-Dateien mit flexibler Feldzuordnung importieren" Foreground="#666"/>
        </StackPanel>
        
        <!-- Datei & Vorlage -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Import-Datei" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="txtDatei" Width="350" IsReadOnly="True"/>
                        <Button Content="Durchsuchen..." Width="100" Margin="10,0,0,0" Click="BtnDateiWaehlen_Click"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Import-Vorlage" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="cbVorlage" Width="180" SelectionChanged="CbVorlage_SelectionChanged"/>
                        <Button Content="ðŸ’¾" Width="30" Margin="5,0,0,0" ToolTip="Vorlage speichern" Click="BtnVorlageSpeichern_Click"/>
                        <Button Content="+" Width="30" Margin="5,0,0,0" ToolTip="Neue Vorlage" Click="BtnVorlageNeu_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Feldzuordnung -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- CSV-Spalten -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="ðŸ“„ Datei-Spalten" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ListBox Grid.Row="1" x:Name="lstCsvSpalten" BorderThickness="0"
                             SelectionMode="Single" AllowDrop="False">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F0F0F0" CornerRadius="4" Padding="10,6" Margin="2">
                                    <TextBlock Text="{Binding}"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Pfeile -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Button Content="â†’" Width="40" Height="30" Margin="0,5" Click="BtnZuordnen_Click"/>
                <Button Content="â†" Width="40" Height="30" Margin="0,5" Click="BtnEntfernen_Click"/>
            </StackPanel>
            
            <!-- Zielfelder -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="ðŸŽ¯ ERP-Felder" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TreeView Grid.Row="1" x:Name="tvZielfelder" BorderThickness="0">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Felder}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="{Binding FontWeight}"/>
                                    <TextBlock Text="{Binding Zuordnung}" Foreground="#1976D2" Margin="10,0,0,0"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Vorschau -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ‘ï¸ Vorschau" FontWeight="SemiBold"/>
                    <Button Content="Aktualisieren" Width="100" Margin="20,0,0,0" Click="BtnVorschau_Click"/>
                    <TextBlock x:Name="txtVorschauStatus" Foreground="#666" Margin="20,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <DataGrid Grid.Row="1" x:Name="dgVorschau" AutoGenerateColumns="True" IsReadOnly="True"
                          BorderThickness="1" BorderBrush="#E0E0E0"/>
            </Grid>
        </Border>
        
        <!-- Optionen & Buttons -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <CheckBox x:Name="chkNeueKunden" Content="Neue Kunden erstellen" IsChecked="True" Margin="0,0,20,0"/>
                <CheckBox x:Name="chkNeueArtikel" Content="Unbekannte Artikel erstellen" Margin="0,0,20,0"/>
                <CheckBox x:Name="chkFehlerIgnorieren" Content="Fehler ignorieren"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Abbrechen" Width="100" Height="35" Margin="0,0,10,0" IsCancel="True"/>
                <Button Content="Importieren" Width="120" Height="35" Click="BtnImportieren_Click"
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
