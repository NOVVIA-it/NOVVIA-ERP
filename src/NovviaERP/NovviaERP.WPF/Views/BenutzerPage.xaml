<Page x:Class="NovviaERP.WPF.Views.BenutzerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Benutzerverwaltung" Background="#f0f2f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Benutzerverwaltung" FontSize="28" FontWeight="Bold" Grid.ColumnSpan="2"/>
        
        <!-- Benutzerliste -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="1" Margin="0,15,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Benutzer" Style="{StaticResource HeaderText}"/>
                    <Button Content="âž• Neu" Margin="20,0,0,0" Click="NeuBenutzer_Click"/>
                </StackPanel>
                <DataGrid x:Name="dgBenutzer" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionChanged="Benutzer_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Login" Binding="{Binding Login}" Width="100"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Nachname}" Width="120"/>
                        <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname}" Width="100"/>
                        <DataGridTextColumn Header="E-Mail" Binding="{Binding Email}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding Aktiv}" Width="50"/>
                        <DataGridTextColumn Header="Letzter Login" Binding="{Binding LetzterLogin, StringFormat=dd.MM. HH:mm}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Benutzer-Details -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="1" Grid.Column="1" Margin="10,15,0,0">
            <StackPanel x:Name="pnlDetails">
                <TextBlock Text="Benutzer bearbeiten" Style="{StaticResource HeaderText}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Login:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtLogin" Grid.Column="1"/>
                    <TextBlock Text="Vorname:" Grid.Row="1" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtVorname" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Text="Nachname:" Grid.Row="2" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNachname" Grid.Row="2" Grid.Column="1"/>
                    <TextBlock Text="E-Mail:" Grid.Row="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1"/>
                    <TextBlock Text="Rolle:" Grid.Row="4" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbRolle" Grid.Row="4" Grid.Column="1" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                    <TextBlock Text="Aktiv:" Grid.Row="5" VerticalAlignment="Center"/>
                    <CheckBox x:Name="chkAktiv" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>
                <Separator Margin="0,15"/>
                <TextBlock Text="Passwort setzen:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtNeuesPasswort" Margin="0,5"/>
                <Button Content="Passwort zurÃ¼cksetzen" Click="PasswortReset_Click"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="LÃ¶schen" Width="80" Margin="0,0,10,0" Click="Loeschen_Click"/>
                    <Button Content="ðŸ’¾ Speichern" Width="100" Background="#0078D4" Foreground="White" Click="Speichern_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Rollen -->
        <Border Style="{StaticResource CardStyle}" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Rollen &amp; Berechtigungen" Style="{StaticResource HeaderText}"/>
                <StackPanel Orientation="Horizontal">
                    <DataGrid x:Name="dgRollen" Width="300" Height="150" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionChanged="Rolle_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Rolle" Binding="{Binding Name}" Width="150"/>
                            <DataGridCheckBoxColumn Header="Admin" Binding="{Binding IstAdmin}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ListBox x:Name="lstBerechtigungen" Width="400" Height="150" Margin="20,0" SelectionMode="Multiple"
                             DisplayMemberPath="Display"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Neue Rolle" Click="NeueRolle_Click"/>
                    <Button Content="Berechtigungen speichern" Margin="10,0" Click="BerechtigungenSpeichern_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
