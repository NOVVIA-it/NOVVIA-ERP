<Window x:Class="NovviaERP.WPF.Views.BankverbindungDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bankverbindung" Height="320" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#f5f5f5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtHeader" Text="Bankverbindung bearbeiten" FontSize="16" FontWeight="SemiBold"
                   Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,15"/>

        <!-- Formular -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <CheckBox x:Name="chkStandard" Content="Standard-Bankverbindung" Grid.ColumnSpan="2" VerticalAlignment="Center"/>

                <TextBlock Text="Bankname:" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBankName" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Inhaber:" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox x:Name="txtInhaber" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="IBAN:" Grid.Row="3" VerticalAlignment="Center"/>
                <TextBox x:Name="txtIBAN" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" CharacterCasing="Upper"/>

                <TextBlock Text="BIC:" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBIC" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Width="150" HorizontalAlignment="Left" CharacterCasing="Upper"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Speichern" Click="Speichern_Click" Padding="20,8" Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
            <Button Content="Abbrechen" Click="Abbrechen_Click" Padding="15,8" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
