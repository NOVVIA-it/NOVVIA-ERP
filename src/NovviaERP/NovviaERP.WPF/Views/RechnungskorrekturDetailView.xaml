<UserControl x:Class="NovviaERP.WPF.Views.RechnungskorrekturDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal">
            <Button Content="Zurueck" Width="80" Click="Zurueck_Click" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtHeader" Text="Rechnungskorrektur" FontSize="28" FontWeight="Bold" Margin="20,0,0,0"/>
            <Border x:Name="brdTyp" CornerRadius="4" Padding="10,4" Margin="15,0,0,0" VerticalAlignment="Center" Background="#6c757d">
                <TextBlock x:Name="txtTyp" FontWeight="SemiBold" Foreground="White"/>
            </Border>
            <Border x:Name="brdStatus" CornerRadius="4" Padding="10,4" Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="txtStatus" FontWeight="SemiBold"/>
            </Border>
        </StackPanel>

        <!-- Kopf-Infos -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Margin="0,15,0,0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Spalte 1: Korrekturdaten -->
                <StackPanel>
                    <TextBlock Text="Korrekturdaten" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Korrektur-Nr:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtKorrekturNr" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Datum:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtDatum"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Zur Rechnung:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtRechnungNr" Foreground="#007bff" Cursor="Hand"
                                   MouseLeftButtonUp="TxtRechnungNr_Click" TextDecorations="Underline"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Typ:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtTypInfo"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Kurztext:" Width="120" Foreground="#666"/>
                        <TextBlock x:Name="txtKurztext" TextWrapping="Wrap" MaxWidth="300"/>
                    </StackPanel>
                </StackPanel>

                <!-- Spalte 2: Kunde -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Kunde" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtKundeName" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Kunden-Nr:" Width="80" Foreground="#666"/>
                        <TextBlock x:Name="txtKundenNr" Foreground="#007bff" Cursor="Hand"
                                   MouseLeftButtonUp="TxtKundenNr_Click" TextDecorations="Underline"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0" x:Name="spUstId" Visibility="Collapsed">
                        <TextBlock Text="USt-ID:" Width="80" Foreground="#666"/>
                        <TextBlock x:Name="txtUstId"/>
                    </StackPanel>
                </StackPanel>

                <!-- Spalte 3: Betraege -->
                <Border Grid.Column="2" Background="#f8f9fa" CornerRadius="6" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Betraege" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="1"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Netto:" Foreground="#666"/>
                            <TextBlock x:Name="txtNetto" Grid.Column="1" HorizontalAlignment="Right"/>
                            <TextBlock Text="MwSt:" Grid.Row="1" Foreground="#666"/>
                            <TextBlock x:Name="txtMwSt" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>
                            <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#ddd" Margin="0,5"/>
                            <TextBlock Text="Brutto:" Grid.Row="3" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="txtBrutto" Grid.Row="3" Grid.Column="1" FontWeight="Bold" FontSize="16"
                                       HorizontalAlignment="Right" Foreground="#dc3545"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Positionen -->
        <Border Grid.Row="2" Background="White" CornerRadius="6" Margin="0,15,0,0" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Korrekturpositionen" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <DataGrid x:Name="dgPositionen" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" BorderThickness="1" BorderBrush="#ddd">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pos" Binding="{Binding NSort}" Width="40"/>
                        <DataGridTextColumn Header="Art-Nr." Binding="{Binding CArtNr}" Width="100"/>
                        <DataGridTextColumn Header="Bezeichnung" Binding="{Binding CName}" Width="*"/>
                        <DataGridTextColumn Header="Menge" Binding="{Binding FAnzahl, StringFormat=N2}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Einzelpreis" Binding="{Binding FVKNetto, StringFormat=N2}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Rabatt %" Binding="{Binding FRabatt, StringFormat=N1}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="MwSt %" Binding="{Binding FMwSt, StringFormat=N1}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Gesamt" Binding="{Binding Gesamt, StringFormat=N2}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Storno-Info (nur wenn storniert) -->
        <Border x:Name="brdStorno" Grid.Row="2" Background="#fff3cd" CornerRadius="6" Margin="0,15,0,0" Padding="20"
                Visibility="Collapsed" VerticalAlignment="Bottom">
            <StackPanel>
                <TextBlock Text="Storniert" FontWeight="Bold" FontSize="14" Foreground="#856404" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Stornodatum:" Width="120" Foreground="#856404"/>
                    <TextBlock x:Name="txtStornoDatum" Foreground="#856404"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Grund:" Width="120" Foreground="#856404"/>
                    <TextBlock x:Name="txtStornoGrund" Foreground="#856404"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" x:Name="spStornoKommentar" Visibility="Collapsed">
                    <TextBlock Text="Kommentar:" Width="120" Foreground="#856404"/>
                    <TextBlock x:Name="txtStornoKommentar" Foreground="#856404" TextWrapping="Wrap" MaxWidth="600"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Footer Aktionen -->
        <Border Grid.Row="3" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Zur Rechnung" Width="120" Margin="0,0,10,0" Click="ZurRechnung_Click"/>
                <Button Content="PDF erstellen" Width="120" Margin="0,0,10,0" Click="PDF_Click"/>
                <Button Content="Drucken" Width="100" Margin="0,0,10,0" Click="Drucken_Click"/>
                <Button Content="E-Mail senden" Width="120" Margin="0,0,10,0" Click="Email_Click"/>
                <Button x:Name="btnStorno" Content="Stornieren" Width="100" Click="Storno_Click"
                        Background="#dc3545" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
