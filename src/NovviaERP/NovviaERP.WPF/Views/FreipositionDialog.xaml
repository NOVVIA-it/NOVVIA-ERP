<Window x:Class="NovviaERP.WPF.Views.FreipositionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Freiposition hinzufügen" Height="320" Width="400"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Bezeichnung:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtBezeichnung" Grid.Column="1" Margin="0,0,0,10" Padding="5"/>

        <TextBlock Grid.Row="1" Text="Menge:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtMenge" Grid.Row="1" Grid.Column="1" Text="1" Margin="0,0,0,10" Padding="5" Width="80" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="2" Text="Einheit:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtEinheit" Grid.Row="2" Grid.Column="1" Text="Stk" Margin="0,0,0,10" Padding="5" Width="80" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="3" Text="Preis (Netto):" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="txtPreisNetto" Grid.Row="3" Grid.Column="1" Text="0,00" Margin="0,0,0,10" Padding="5" Width="100" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="4" Text="MwSt-Satz:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox x:Name="cmbMwSt" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" Padding="5" Width="100" HorizontalAlignment="Left">
            <ComboBoxItem Content="19%" Tag="19" IsSelected="True"/>
            <ComboBoxItem Content="7%" Tag="7"/>
            <ComboBoxItem Content="0%" Tag="0"/>
        </ComboBox>

        <TextBlock Grid.Row="5" Text="Hinweis:" VerticalAlignment="Top" Margin="0,0,10,10"/>
        <TextBox x:Name="txtHinweis" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10" Padding="5"
                 AcceptsReturn="True" TextWrapping="Wrap" Height="60" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hinzufügen" Padding="20,8" Margin="0,0,10,0" Click="Hinzufuegen_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0"/>
            <Button Content="Abbrechen" Padding="15,8" Click="Abbrechen_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
