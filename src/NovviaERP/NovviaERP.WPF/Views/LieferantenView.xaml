<UserControl x:Class="NovviaERP.WPF.Views.LieferantenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NovviaERP.WPF.Converters"
             Background="#f0f2f5">
    <UserControl.Resources>
        <conv:BoolToYesNoConverter x:Key="BoolToYesNo"/>
        <conv:BoolToColorConverter x:Key="BoolToColor"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BestellStatusConverter x:Key="StatusConverter"/>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Einkauf / Lieferanten" FontSize="28" FontWeight="Bold"/>

        <TabControl Grid.Row="1" Margin="0,15,0,0">

            <!-- Lieferanten -->
            <TabItem Header="Lieferanten">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                        <TextBox x:Name="txtLieferantSuche" Width="250" VerticalContentAlignment="Center"/>
                        <Button Content="Suchen" Margin="10,0,0,0" Click="LieferantSuchen_Click"/>
                        <CheckBox x:Name="chkNurMSV3" Content="Nur MSV3" VerticalAlignment="Center" Margin="20,0,0,0" Checked="ChkNurMSV3_Changed" Unchecked="ChkNurMSV3_Changed"/>
                        <Button Content="+ Neuer Lieferant" Margin="20,0,0,0" Background="#0078D4" Foreground="White" Click="NeuerLieferant_Click"/>
                    </StackPanel>

                    <!-- Lieferanten-Grid -->
                    <DataGrid x:Name="dgLieferanten" Grid.Row="1" Margin="0,10,10,0" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionChanged="Lieferant_SelectionChanged" MouseDoubleClick="Lieferant_DoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nr" Binding="{Binding CLiefNr}" Width="80"/>
                            <DataGridTextColumn Header="Firma" Binding="{Binding CFirma}" Width="*"/>
                            <DataGridTextColumn Header="Ort" Binding="{Binding COrt}" Width="100"/>
                            <DataGridTemplateColumn Header="MSV3" Width="55">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding NHatMSV3, Converter={StaticResource BoolToYesNo}}"
                                                   Foreground="{Binding NHatMSV3, Converter={StaticResource BoolToColor}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Best." Binding="{Binding NOffeneBestellungen}" Width="50"/>
                            <DataGridTextColumn Header="RE" Binding="{Binding NOffeneRechnungen}" Width="40"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Lieferant Details + MSV3 Konfiguration -->
                    <Border x:Name="pnlLieferantDetail" Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}"
                            Margin="0,10,0,0" Visibility="Collapsed">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Header mit Bearbeiten/Speichern Buttons -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock x:Name="txtLiefFirma" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
                                        <TextBlock x:Name="txtLiefNr" Foreground="Gray" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                        <Button x:Name="btnLiefBearbeiten" Content="âœï¸ Bearbeiten" Margin="0,0,5,0"
                                                Click="LiefBearbeiten_Click" Padding="10,5"/>
                                        <Button x:Name="btnLiefSpeichern" Content="ðŸ’¾ Speichern"
                                                Background="#107C10" Foreground="White" Padding="10,5"
                                                Click="LiefSpeichern_Click" Visibility="Collapsed"/>
                                        <Button x:Name="btnLiefAbbrechen" Content="Abbrechen" Margin="5,0,0,0"
                                                Click="LiefAbbrechen_Click" Visibility="Collapsed" Padding="10,5"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Tabs fÃ¼r Stammdaten / MSV3 -->
                                <TabControl Margin="0,10,0,0" Height="450">
                                    <!-- Tab: Stammdaten -->
                                    <TabItem Header="Stammdaten">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5">
                                            <StackPanel>
                                                <!-- Identifikation -->
                                                <TextBlock Text="Identifikation" FontWeight="SemiBold" Margin="0,5,0,10"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="Lieferanten-Nr:" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefLiefNr" Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold"/>

                                                    <TextBlock Text="Eigene Kd-Nr:" Grid.Row="1" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefEigeneKdNr" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Status:" Grid.Row="2" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefStatus" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
                                                </Grid>

                                                <Separator Margin="0,10"/>

                                                <!-- Adresse & Kontakt -->
                                                <TextBlock Text="Adresse &amp; Kontakt" FontWeight="SemiBold" Margin="0,5,0,10"/>
                                                <Grid x:Name="gridLiefAdresse">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="28"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="Strasse:" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefStrasse" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                                                    <TextBlock Text="PLZ:" Grid.Row="1" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                                        <TextBox x:Name="txtLiefPLZ" Width="60" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                                        <TextBox x:Name="txtLiefOrt" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent" Margin="5,0,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Text="Land:" Grid.Row="2" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefLand" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                                                    <TextBlock Text="Ansprechpartner:" Grid.Row="3" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefAnsprechpartner" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                                                    <TextBlock Text="Tel. Zentrale:" Grid.Row="4" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefTel" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                                                    <TextBlock Text="Tel. Durchwahl:" Grid.Row="5" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefTelDurchwahl" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                                                    <TextBlock Text="Mobil:" Grid.Row="6" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefMobil" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                                                    <TextBlock Text="Fax:" Grid.Row="7" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefFax" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                                                    <TextBlock Text="E-Mail:" Grid.Row="8" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefEmail" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="#0078D4" Cursor="Hand" MouseDoubleClick="LiefEmail_Click"/>

                                                    <TextBlock Text="Homepage:" Grid.Row="9" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBox x:Name="txtLiefHomepage" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="#0078D4" Cursor="Hand" MouseDoubleClick="LiefHomepage_Click"/>
                                                </Grid>

                                                <Separator Margin="0,10"/>

                                                <!-- Finanzdaten -->
                                                <TextBlock Text="Finanzdaten" FontWeight="SemiBold" Margin="0,5,0,10"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="USt-IdNr:" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefUstId" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="USt-befreit:" Grid.Row="1" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefUstBefreit" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="GLN/ILN:" Grid.Row="2" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefGLN" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Kreditor-Nr:" Grid.Row="3" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefKreditorNr" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="WÃ¤hrung:" Grid.Row="4" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefWaehrung" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="IBAN:" Grid.Row="5" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefIBAN" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" FontFamily="Consolas"/>

                                                    <TextBlock Text="BIC:" Grid.Row="6" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefBIC" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Bank:" Grid.Row="7" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefBank" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"/>
                                                </Grid>

                                                <Separator Margin="0,10"/>

                                                <!-- Konditionen -->
                                                <TextBlock Text="Konditionen" FontWeight="SemiBold" Margin="0,5,0,10"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="Zahlungsziel:" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefZahlungsziel" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Skonto:" Grid.Row="1" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefSkonto" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Min.Bestellwert:" Grid.Row="2" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefMindestbestellwert" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Mindermenge:" Grid.Row="3" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefMindermenge" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Frachtkosten:" Grid.Row="4" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefFrachtkosten" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Frei Haus ab:" Grid.Row="5" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefFreiHausAb" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Lieferzeit:" Grid.Row="6" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefLieferzeit" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Rabatt:" Grid.Row="7" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefRabatt" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"/>
                                                </Grid>

                                                <Separator Margin="0,10"/>

                                                <!-- Dropshipping -->
                                                <TextBlock Text="Dropshipping" FontWeight="SemiBold" Margin="0,5,0,10"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                        <RowDefinition Height="26"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="Dropshipping:" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefDropshipping" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Mit Nachnahme:" Grid.Row="1" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefDropshippingNN" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Freipos erlaubt:" Grid.Row="2" VerticalAlignment="Center" Foreground="Gray"/>
                                                    <TextBlock x:Name="txtLiefDropshippingFP" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
                                                </Grid>

                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>

                                    <!-- Tab: Eigene Felder -->
                                    <TabItem Header="Eigene Felder">
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Eigene Felder fÃ¼r diesen Lieferanten" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                            <DataGrid x:Name="dgLieferantEigeneFelder" Grid.Row="1" AutoGenerateColumns="False"
                                                      CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="Horizontal">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Feld" Binding="{Binding CAttributName}" Width="120" IsReadOnly="True"/>
                                                    <DataGridTemplateColumn Header="Wert" Width="*">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding WertAnzeige}" VerticalAlignment="Center" Margin="5,0"/>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                        <DataGridTemplateColumn.CellEditingTemplate>
                                                            <DataTemplate>
                                                                <TextBox Text="{Binding WertBearbeitung, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                         BorderThickness="0" Padding="5,2"/>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellEditingTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn Header="Typ" Binding="{Binding FeldTypName}" Width="80" IsReadOnly="True"/>
                                                </DataGrid.Columns>
                                            </DataGrid>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                                                <Button Content="Eigene Felder speichern" Background="#0078D4" Foreground="White"
                                                        Padding="15,8" Click="LieferantEigeneFelderSpeichern_Click"/>
                                                <TextBlock x:Name="txtLiefEFHinweis" Text="" Margin="15,0,0,0"
                                                           VerticalAlignment="Center" Foreground="Orange"/>
                                            </StackPanel>
                                        </Grid>
                                    </TabItem>

                                    <!-- Tab: MSV3 -->
                                    <TabItem Header="MSV3">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5">
                                            <StackPanel>

                                <!-- MSV3 Konfiguration -->
                                                <TextBlock Text="MSV3 Konfiguration" FontWeight="SemiBold" Margin="0,5,0,10"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="URL:" VerticalAlignment="Center"/>
                                                    <TextBox x:Name="txtLiefMSV3Url" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Benutzer:" Grid.Row="1" VerticalAlignment="Center"/>
                                                    <TextBox x:Name="txtLiefMSV3Benutzer" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Passwort:" Grid.Row="2" VerticalAlignment="Center"/>
                                                    <PasswordBox x:Name="txtLiefMSV3Passwort" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Kundennr:" Grid.Row="3" VerticalAlignment="Center"/>
                                                    <TextBox x:Name="txtLiefMSV3Kundennr" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>

                                                    <TextBlock Text="Filiale:" Grid.Row="4" VerticalAlignment="Center"/>
                                                    <TextBox x:Name="txtLiefMSV3Filiale" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Text="001"/>

                                                    <TextBlock Text="Version:" Grid.Row="5" VerticalAlignment="Center"/>
                                                    <ComboBox x:Name="cboLiefMSV3Version" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Width="60" HorizontalAlignment="Left">
                                                        <ComboBoxItem Content="1" Tag="1"/>
                                                        <ComboBoxItem Content="2" Tag="2"/>
                                                    </ComboBox>

                                                    <TextBlock Text="Aktiv:" Grid.Row="5" VerticalAlignment="Center" Margin="80,0,0,0"/>
                                                    <CheckBox x:Name="chkLiefMSV3Aktiv" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="80,0,0,0"/>

                                                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0">
                                                        <Button Content="Testen" Click="LieferantMSV3Test_Click" Width="70"/>
                                                        <Button Content="Speichern" Margin="10,0,0,0" Background="#0078D4" Foreground="White"
                                                                Click="LieferantMSV3Speichern_Click" Width="90"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Separator Margin="0,15"/>

                                                <!-- PZN Schnellabfrage -->
                                                <TextBlock Text="PZN Bestandsabfrage" FontWeight="SemiBold" Margin="0,5,0,10"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox x:Name="txtPZNAbfrage" VerticalAlignment="Center"
                                                             ToolTip="PZN eingeben (z.B. 01234567)"/>
                                                    <Button Grid.Column="1" Content="Abfragen" Margin="10,0,0,0"
                                                            Background="#5C2D91" Foreground="White"
                                                            Click="PZNAbfragen_Click" Width="80"/>
                                                </Grid>

                                                <!-- Ergebnis -->
                                                <Border x:Name="pnlPZNErgebnis" Background="#f8f9fa" CornerRadius="4"
                                                        Padding="10" Margin="0,10,0,0" Visibility="Collapsed">
                                                    <StackPanel>
                                                        <TextBlock x:Name="txtPZNArtikel" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                                        <Grid Margin="0,8,0,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="80"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="22"/>
                                                                <RowDefinition Height="22"/>
                                                                <RowDefinition Height="22"/>
                                                                <RowDefinition Height="22"/>
                                                                <RowDefinition Height="22"/>
                                                            </Grid.RowDefinitions>

                                                            <TextBlock Text="Bestand:" Foreground="Gray"/>
                                                            <TextBlock x:Name="txtPZNBestand" Grid.Column="1" FontWeight="SemiBold"/>

                                                            <TextBlock Text="MHD:" Grid.Row="1" Foreground="Gray"/>
                                                            <TextBlock x:Name="txtPZNMHD" Grid.Row="1" Grid.Column="1"/>

                                                            <TextBlock Text="Charge:" Grid.Row="2" Foreground="Gray"/>
                                                            <TextBlock x:Name="txtPZNCharge" Grid.Row="2" Grid.Column="1"/>

                                                            <TextBlock Text="EK-Preis:" Grid.Row="3" Foreground="Gray"/>
                                                            <TextBlock x:Name="txtPZNPreis" Grid.Row="3" Grid.Column="1"/>

                                                            <TextBlock Text="Status:" Grid.Row="4" Foreground="Gray"/>
                                                            <TextBlock x:Name="txtPZNStatus" Grid.Row="4" Grid.Column="1"/>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                </TabControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Bestellungen -->
            <TabItem Header="Bestellungen">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="cboBestellStatus" Width="150" SelectedIndex="0" SelectionChanged="BestellStatus_Changed">
                            <ComboBoxItem Content="Alle Status"/>
                            <ComboBoxItem Content="Offen" Tag="0"/>
                            <ComboBoxItem Content="Freigegeben" Tag="5"/>
                            <ComboBoxItem Content="In Bearbeitung" Tag="20"/>
                            <ComboBoxItem Content="Teilgeliefert" Tag="30"/>
                            <ComboBoxItem Content="Abgeschlossen" Tag="500"/>
                        </ComboBox>
                        <Button Content="Aktualisieren" Margin="10,0,0,0" Click="BestellungenLaden_Click"/>
                        <Button Content="+ Neue Bestellung" Margin="20,0,0,0" Background="#0078D4" Foreground="White" Click="NeueBestellung_Click"/>
                        <Button x:Name="btnMSV3Bestand" Content="MSV3 Bestand" Margin="10,0,0,0" Background="#5C2D91" Foreground="White"
                                IsEnabled="False" Click="MSV3BestandAbfragen_Click"/>
                        <Button x:Name="btnMSV3Senden" Content="MSV3 Bestellen" Margin="10,0,0,0" Background="#107C10" Foreground="White"
                                IsEnabled="False" Click="MSV3Senden_Click"/>
                    </StackPanel>

                    <!-- Bestellungen-Grid -->
                    <DataGrid x:Name="dgBestellungen" Grid.Row="1" Margin="0,10,0,0" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionChanged="Bestellung_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Bestellnr" Binding="{Binding CEigeneBestellnummer}" Width="120"/>
                            <DataGridTextColumn Header="Lieferant" Binding="{Binding LieferantName}" Width="*"/>
                            <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=d}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding NStatus, Converter={StaticResource StatusConverter}}" Width="100"/>
                            <DataGridTextColumn Header="Positionen" Binding="{Binding AnzahlPositionen}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Positionen -->
                    <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Positionen" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                <Button x:Name="btnBestandAlleAbfragen" Content="1. Bestand abfragen"
                                        Margin="20,0,0,0" Background="#5C2D91" Foreground="White"
                                        Click="BestandAlleAbfragen_Click" IsEnabled="False"/>
                                <Button x:Name="btnBestellungUebermitteln" Content="2. Bestellung Ã¼bermitteln"
                                        Margin="10,0,0,0" Background="#107C10" Foreground="White"
                                        Click="BestellungUebermitteln_Click" IsEnabled="False"/>
                            </StackPanel>
                            <DataGrid x:Name="dgBestellPositionen" Grid.Row="1" Margin="0,5,0,0" AutoGenerateColumns="False"
                                      CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="Horizontal">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="âœ“" Width="35">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IstAusgewaehlt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="PZN" Binding="{Binding CPZN}" Width="80" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Artikel" Binding="{Binding ArtikelName}" Width="200" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Lieferant" Binding="{Binding LieferantName}" Width="150" IsReadOnly="True"/>
                                    <DataGridTemplateColumn Header="Menge" Width="55">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FMenge, StringFormat=N0}" TextAlignment="Right" Margin="0,0,5,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="EK â‚¬" Width="75">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding EKNetto, StringFormat=N2}" TextAlignment="Right" Margin="0,0,5,0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Bestand" Width="65">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding MSV3Bestand}" TextAlignment="Right" Margin="0,0,5,0"
                                                           Foreground="{Binding MSV3BestandFarbe}" FontWeight="SemiBold"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="MHD" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding MSV3MHDText}" TextAlignment="Left"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Wunsch-MHD" Width="110">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DatePicker SelectedDate="{Binding WunschMHD, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            BorderThickness="0" Background="Transparent"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Text" Binding="{Binding CPositionsText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                    <DataGridTemplateColumn Header="Status" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding MSV3StatusText}" Foreground="{Binding MSV3StatusFarbe}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- ABdata Import -->
            <TabItem Header="ABdata">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Import -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ABdata Artikelstamm importieren" FontWeight="Bold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox x:Name="txtABdataDatei" Width="400" IsReadOnly="True"/>
                                <Button Content="Datei waehlen" Margin="10,0,0,0" Click="ABdataDateiWaehlen_Click"/>
                                <Button Content="Import starten" Margin="10,0,0,0" Background="#107C10" Foreground="White" Click="ABdataImport_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Suche -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ABdata-Artikel suchen:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtABdataSuche" Width="300" Margin="10,0,0,0"/>
                                <Button Content="Suchen" Margin="10,0,0,0" Click="ABdataSuchen_Click"/>
                                <Button Content="In JTL kopieren" Margin="20,0,0,0" Background="#0078D4" Foreground="White"
                                        Click="ABdataKopieren_Click" x:Name="btnABdataKopieren" IsEnabled="False"/>
                            </StackPanel>
                            <DataGrid x:Name="dgABdataArtikel" Grid.Row="1" Margin="0,10,0,0" AutoGenerateColumns="False" IsReadOnly="True"
                                      SelectionChanged="ABdataArtikel_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="PZN" Binding="{Binding PZN}" Width="90"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Hersteller" Binding="{Binding Hersteller}" Width="150"/>
                                    <DataGridTextColumn Header="AEP" Binding="{Binding AEP, StringFormat=C}" Width="80"/>
                                    <DataGridTextColumn Header="AVP" Binding="{Binding AVP, StringFormat=C}" Width="80"/>
                                    <DataGridTemplateColumn Header="Rx" Width="40">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Rx" Foreground="Red" Visibility="{Binding Rezeptpflicht, Converter={StaticResource BoolToVis}}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- MSV3 Log -->
            <TabItem Header="MSV3 Log">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="MSV3 Kommunikations-Log" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button x:Name="btnLogAktualisieren" Content="Aktualisieren" Margin="20,0,0,0" Click="LogAktualisieren_Click"/>
                        <Button x:Name="btnLogLeeren" Content="Log leeren" Margin="10,0,0,0" Background="#D13438" Foreground="White" Click="LogLeeren_Click"/>
                        <TextBlock x:Name="txtLogAnzahl" Text="" Margin="20,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>

                    <!-- Log DataGrid -->
                    <DataGrid x:Name="dgMSV3Log" Grid.Row="1" Margin="0,10,0,0" AutoGenerateColumns="False" IsReadOnly="True"
                              GridLinesVisibility="Horizontal" SelectionChanged="MSV3Log_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Zeitpunkt" Binding="{Binding ZeitpunktText}" Width="140"/>
                            <DataGridTextColumn Header="Lieferant" Binding="{Binding LieferantName}" Width="150"/>
                            <DataGridTextColumn Header="Aktion" Binding="{Binding CAktion}" Width="120"/>
                            <DataGridTemplateColumn Header="Status" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StatusText}"
                                                   Foreground="{Binding StatusFarbe}" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="HTTP" Binding="{Binding NHttpStatus}" Width="50"/>
                            <DataGridTextColumn Header="BestellSupportId" Binding="{Binding CBestellSupportId}" Width="120"/>
                            <DataGridTextColumn Header="MSV3-Auftrag" Binding="{Binding CMSV3AuftragsId}" Width="100"/>
                            <DataGridTextColumn Header="Dauer" Binding="{Binding DauerText}" Width="60"/>
                            <DataGridTextColumn Header="Fehler" Binding="{Binding CFehler}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Detail Header -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,5">
                        <TextBlock x:Name="txtLogDetailHeader" Text="Request / Response XML" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Detail Panel: Request + Response -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Request -->
                        <Border Grid.Column="0" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="ðŸ“¤ Request" FontWeight="SemiBold" Margin="5" Foreground="#0078D4"/>
                                <TextBox x:Name="txtLogRequest" Grid.Row="1" IsReadOnly="True"
                                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                         FontFamily="Consolas" FontSize="11" TextWrapping="NoWrap"
                                         Background="#f8f8f8" BorderThickness="0"/>
                            </Grid>
                        </Border>

                        <!-- Response -->
                        <Border Grid.Column="2" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="ðŸ“¥ Response" FontWeight="SemiBold" Margin="5" Foreground="#107C10"/>
                                <TextBox x:Name="txtLogResponse" Grid.Row="1" IsReadOnly="True"
                                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                         FontFamily="Consolas" FontSize="11" TextWrapping="NoWrap"
                                         Background="#f8f8f8" BorderThickness="0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
