<UserControl x:Class="NovviaERP.WPF.Views.LagerChargenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Chargen-Verwaltung" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Aktualisieren" Click="Aktualisieren_Click"
                            Background="{DynamicResource PrimaryBrush}" Foreground="White" Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter -->
        <Border Grid.Row="1" Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,12">
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,20,5">
                    <TextBlock Text="Lager:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="cmbLager" Width="150" Height="32" SelectionChanged="Lager_Changed"
                              DisplayMemberPath="CName" SelectedValuePath="KWarenLager"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,20,5">
                    <TextBlock Text="Suche:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="txtSuche" Width="200" Height="32" Padding="10,5"
                             VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"
                             ToolTip="Chargennummer, ArtNr oder Artikelname"/>
                    <Button Content="Suchen" Click="Suchen_Click" Margin="10,0" Padding="15,5"
                            Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <CheckBox x:Name="chkNurMitBestand" Content="Nur mit Bestand" VerticalAlignment="Center" Margin="0,0,15,0"
                              IsChecked="True" Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                    <CheckBox x:Name="chkNurGesperrt" Content="Nur Gesperrte" VerticalAlignment="Center" Margin="0,0,15,0"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                    <CheckBox x:Name="chkNurQuarantaene" Content="Nur Quarantaene" VerticalAlignment="Center" Margin="0,0,15,0"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                    <CheckBox x:Name="chkNurAbgelaufen" Content="MHD abgelaufen" VerticalAlignment="Center"
                              Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Tabs -->
        <TabControl x:Name="tabChargen" Grid.Row="2" Margin="20,15,20,0" BorderThickness="1" BorderBrush="#ddd"
                    SelectionChanged="TabChargen_SelectionChanged">
            <!-- Tab: Chargenbestaende -->
            <TabItem Header="Chargenbestaende" Padding="15,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                <DataGrid x:Name="dgChargen" AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          HeadersVisibility="Column" BorderThickness="0"
                          MouseDoubleClick="DG_DoubleClick" SelectionChanged="DG_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ChargenNr" Binding="{Binding CChargenNr}" Width="120" FontWeight="SemiBold"/>
                        <DataGridTextColumn Header="ArtNr" Binding="{Binding CArtNr}" Width="100"/>
                        <DataGridTextColumn Header="Artikel" Binding="{Binding CArtikelName}" Width="200"/>
                        <DataGridTextColumn Header="Lager" Binding="{Binding CLagerName}" Width="100"/>
                        <DataGridTextColumn Header="Bestand" Binding="{Binding FBestand, StringFormat=N0}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="MHD" Binding="{Binding DMHD, StringFormat=dd.MM.yyyy}" Width="90"/>
                        <DataGridTextColumn Header="Rest Tage" Binding="{Binding NTageRestMHD}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CMHDStatus}" Value="Abgelaufen">
                                            <Setter Property="Foreground" Value="#dc3545"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CMHDStatus}" Value="Bald ablaufend">
                                            <Setter Property="Foreground" Value="#ffc107"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#28a745"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NGesperrt}" Value="True">
                                                        <Setter Property="Background" Value="#ffc107"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding NQuarantaene}" Value="True">
                                                        <Setter Property="Background" Value="#dc3545"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding NGesperrt}" Value="False"/>
                                                            <Condition Binding="{Binding CMHDStatus}" Value="Abgelaufen"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="#ffc107"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Sperrgrund" Binding="{Binding CSperrgrund}" Width="150"/>
                        <DataGridTextColumn Header="Eingang" Binding="{Binding DEingang, StringFormat=dd.MM.yyyy}" Width="90"/>
                        <DataGridTextColumn Header="Lieferschein" Binding="{Binding CLieferscheinNr}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Summenzeile Chargen -->
                <Border Grid.Row="1" Background="#e8f4fc" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="0,1,0,0" Padding="10,8" Margin="0,5,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="txtSummeChargen" Text="0 Chargen" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Summe Bestand:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtSummeBestand" Text="0" FontWeight="Bold" Width="80" TextAlignment="Right" VerticalAlignment="Center"/>
                            <TextBlock Text="Gesperrt:" VerticalAlignment="Center" Margin="20,0,5,0" Foreground="#ffc107"/>
                            <TextBlock x:Name="txtSummeGesperrt" Text="0" FontWeight="SemiBold" Width="50" TextAlignment="Right" Foreground="#ffc107" VerticalAlignment="Center"/>
                            <TextBlock Text="Quarantäne:" VerticalAlignment="Center" Margin="20,0,5,0" Foreground="#dc3545"/>
                            <TextBlock x:Name="txtSummeQuarantaene" Text="0" FontWeight="SemiBold" Width="50" TextAlignment="Right" Foreground="#dc3545" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                </Grid>
            </TabItem>

            <!-- Tab: Chargen-Ausgaenge (Rueckrufverfolgung) -->
            <TabItem Header="Chargen-Ausgaenge" Padding="15,5" x:Name="tabAusgaenge">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <TextBlock Text="Chargennummer:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="txtAusgaengeChargenNr" Width="150" Height="32" Padding="10,5"
                                 VerticalContentAlignment="Center" KeyDown="TxtAusgaengeChargenNr_KeyDown"/>
                        <Button Content="Suchen" Click="LadeAusgaenge_Click" Margin="15,0,0,0" Padding="15,5"
                                Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
                        <TextBlock Text="(Fuer Chargenrueckruf - zeigt alle Kunden die diese Charge erhalten haben)"
                                   VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#666" FontStyle="Italic"/>
                    </StackPanel>

                    <DataGrid x:Name="dgAusgaenge" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              HeadersVisibility="Column" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum" Binding="{Binding DAusgang, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTextColumn Header="ChargenNr" Binding="{Binding CChargenNr}" Width="120" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="MHD" Binding="{Binding DMHD, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTextColumn Header="Menge" Binding="{Binding FMenge, StringFormat=N0}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Lieferschein" Binding="{Binding CLieferscheinNr}" Width="120"/>
                            <DataGridTextColumn Header="Auftrag" Binding="{Binding CBestellNr}" Width="100"/>
                            <DataGridTextColumn Header="Kd-Nr" Binding="{Binding CKundenNr}" Width="80"/>
                            <DataGridTextColumn Header="Kunde" Binding="{Binding KundeName}" Width="200"/>
                            <DataGridTextColumn Header="Ort" Binding="{Binding KundeOrt}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Summenzeile Ausgaenge -->
                    <Border Grid.Row="2" Background="#e8f4fc" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="0,1,0,0" Padding="10,8" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="txtAusgaengeAnzahl" Text="0 Ausgaenge" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Summe Menge:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock x:Name="txtAusgaengeSummeMenge" Text="0" FontWeight="Bold" Width="80" TextAlignment="Right" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab: Chargenverfolgung (interne Bewegungen) -->
            <TabItem Header="Interne Bewegungen" Padding="15,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <TextBlock Text="Chargennummer:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="txtVerfolgungChargenNr" Width="150" Height="32" Padding="10,5"
                                 VerticalContentAlignment="Center" KeyDown="TxtVerfolgungChargenNr_KeyDown"/>
                        <Button Content="Suchen" Click="LadeVerfolgung_Click" Margin="15,0,0,0" Padding="15,5"
                                Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <DataGrid x:Name="dgVerfolgung" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              HeadersVisibility="Column" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                            <DataGridTextColumn Header="Aktion" Binding="{Binding AktionText}" Width="120"/>
                            <DataGridTextColumn Header="Menge" Binding="{Binding FMenge, StringFormat=N0}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Grund" Binding="{Binding CGrund}" Width="180"/>
                            <DataGridTextColumn Header="Von Lager" Binding="{Binding CVonLagerName}" Width="100"/>
                            <DataGridTextColumn Header="Nach Lager" Binding="{Binding CNachLagerName}" Width="100"/>
                            <DataGridTextColumn Header="Hinweis" Binding="{Binding CHinweis}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Statusleiste mit Aktionen -->
        <Border Grid.Row="3" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnVerfolgung" Content="Verfolgung" Click="Verfolgung_Click" Padding="12,5" IsEnabled="False"/>
                    <Button x:Name="btnSperren" Content="Sperren" Click="Sperren_Click" Padding="12,5" Margin="10,0,0,0"
                            Background="#ffc107" Foreground="Black" BorderThickness="0" IsEnabled="False"/>
                    <Button x:Name="btnFreigeben" Content="Freigeben" Click="Freigeben_Click" Padding="12,5" Margin="10,0,0,0"
                            Background="#28a745" Foreground="White" BorderThickness="0" IsEnabled="False"/>
                    <Button x:Name="btnQuarantaene" Content="In Quarantaene" Click="Quarantaene_Click" Padding="12,5" Margin="10,0,0,0"
                            Background="#6c757d" Foreground="White" BorderThickness="0" IsEnabled="False"/>
                    <Button x:Name="btnAusQuarantaene" Content="Aus Quarantaene" Click="AusQuarantaene_Click" Padding="12,5" Margin="10,0,0,0"
                            Background="#17a2b8" Foreground="White" BorderThickness="0" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
