<Page x:Class="NovviaERP.WPF.Views.VersandPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Versand" Background="#f0f2f5">
    <Grid Margin="20"><Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
        <TextBlock Text="Versand - Zu versendende Bestellungen" FontSize="28" FontWeight="Bold"/>
        <DataGrid x:Name="dgVersand" Grid.Row="1" Margin="0,20,0,0" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bestellnr." Binding="{Binding BestellNr}" Width="120"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding Erstellt, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Kunde" Binding="{Binding Kunde.Nachname}" Width="150"/>
                <DataGridTextColumn Header="Ort" Binding="{Binding Lieferadresse.Ort}" Width="150"/>
                <DataGridTemplateColumn Header="Versenden" Width="200">
                    <DataGridTemplateColumn.CellTemplate><DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="DHL" Tag="{Binding Id}" Click="Versenden_Click" Margin="2"/>
                            <Button Content="DPD" Tag="{Binding Id}" Click="Versenden_Click" Margin="2"/>
                            <Button Content="GLS" Tag="{Binding Id}" Click="Versenden_Click" Margin="2"/>
                        </StackPanel>
                    </DataTemplate></DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns></DataGrid></Grid>
</Page>
