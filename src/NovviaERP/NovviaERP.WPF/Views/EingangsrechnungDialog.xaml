<Window x:Class="NovviaERP.WPF.Views.EingangsrechnungDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eingangsrechnung" Height="550" Width="600"
        WindowStartupLocation="CenterOwner" Background="#f0f2f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtHeader" Text="Neue Eingangsrechnung" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Formular -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Lieferant:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox x:Name="cboLieferant" Grid.Column="1" Height="30"
                          DisplayMemberPath="CFirma" SelectedValuePath="KLieferant"/>

                <TextBlock Text="Rechnungs-Nr.:" Grid.Row="1" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtRechnungsNr" Grid.Row="1" Grid.Column="1" Height="28" VerticalContentAlignment="Center"/>

                <TextBlock Text="Rechnungsdatum:" Grid.Row="2" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <DatePicker x:Name="dpRechnungsDatum" Grid.Row="2" Grid.Column="1" Height="28"/>

                <TextBlock Text="Faellig am:" Grid.Row="3" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpFaelligAm" Grid.Row="3" Grid.Column="1" Height="28"/>

                <TextBlock Text="Netto:" Grid.Row="4" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtNetto" Width="120" Height="28" VerticalContentAlignment="Center" TextChanged="Betrag_Changed"/>
                    <TextBlock Text="EUR" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <TextBlock Text="MwSt:" Grid.Row="5" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtMwSt" Width="120" Height="28" VerticalContentAlignment="Center" TextChanged="Betrag_Changed"/>
                    <TextBlock Text="EUR" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Button Content="19%" Width="50" Margin="10,0,0,0" Height="26" Click="MwSt19_Click"/>
                    <Button Content="7%" Width="50" Margin="5,0,0,0" Height="26" Click="MwSt7_Click"/>
                </StackPanel>

                <TextBlock Text="Brutto:" Grid.Row="6" VerticalAlignment="Center" FontWeight="Bold"/>
                <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtBrutto" Width="120" Height="28" VerticalContentAlignment="Center"
                             FontWeight="Bold" IsReadOnly="True" Background="#f0f0f0"/>
                    <TextBlock Text="EUR" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <TextBlock Text="Bestellung:" Grid.Row="7" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal">
                    <ComboBox x:Name="cboBestellung" Width="200" Height="28"
                              DisplayMemberPath="DisplayText" SelectedValuePath="KLieferantenBestellung"/>
                    <TextBlock Text="(optional)" Foreground="#666" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <TextBlock Text="Status:" Grid.Row="8" VerticalAlignment="Center"/>
                <ComboBox x:Name="cboStatus" Grid.Row="8" Grid.Column="1" Width="150" HorizontalAlignment="Left" Height="28">
                    <ComboBoxItem Content="Offen" Tag="0" IsSelected="True"/>
                    <ComboBoxItem Content="Geprueft" Tag="1"/>
                    <ComboBoxItem Content="Bezahlt" Tag="2"/>
                </ComboBox>

                <TextBlock Text="Bemerkung:" Grid.Row="9" VerticalAlignment="Top" Margin="0,5,0,0"/>
                <TextBox x:Name="txtBemerkung" Grid.Row="9" Grid.Column="1" AcceptsReturn="True"
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnLoeschen" Content="Loeschen" Width="100" Height="35" Click="Loeschen_Click"
                    Background="#dc3545" Foreground="White" Visibility="Collapsed"/>
            <Button Content="Speichern" Width="120" Height="35" Margin="10,0,0,0" Click="Speichern_Click"
                    Background="{DynamicResource PrimaryBrush}" Foreground="White" FontWeight="Bold"/>
            <Button Content="Abbrechen" Width="100" Height="35" Margin="10,0,0,0" Click="Abbrechen_Click"/>
        </StackPanel>
    </Grid>
</Window>
