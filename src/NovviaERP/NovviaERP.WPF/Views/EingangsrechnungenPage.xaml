<UserControl x:Class="NovviaERP.WPF.Views.EingangsrechnungenPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Eingangsrechnungen" FontSize="28" FontWeight="Bold"/>

        <!-- Filter -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15">
            <TextBox x:Name="txtSuche" Width="250" Height="35" VerticalContentAlignment="Center"
                     ToolTip="Lieferant, Rechnungsnr..." KeyDown="Suche_KeyDown"/>
            <Button Content="Suchen" Width="80" Margin="10,0" Height="35" Click="Suchen_Click"/>
            <ComboBox x:Name="cmbStatus" Width="150" Height="35" SelectionChanged="Status_Changed">
                <ComboBoxItem Content="Alle" IsSelected="True" Tag=""/>
                <ComboBoxItem Content="Offen" Tag="0"/>
                <ComboBoxItem Content="Geprueft" Tag="1"/>
                <ComboBoxItem Content="Bezahlt" Tag="2"/>
            </ComboBox>
            <!-- Zeitraum Filter JTL-Style -->
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                    <Button x:Name="btnMonatZurueck" Content="&lt;" Width="25" Height="22" Click="MonatZurueck_Click"
                            FontWeight="Bold" Padding="0"/>
                    <TextBlock x:Name="txtMonatAnzeige" Text="12.2024" Width="70" TextAlignment="Center"
                               VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <Button x:Name="btnMonatVor" Content="&gt;" Width="25" Height="22" Click="MonatVor_Click"
                            FontWeight="Bold" Padding="0"/>
                </StackPanel>
                <ComboBox x:Name="cmbZeitraum" Width="150" Height="28" SelectionChanged="Zeitraum_Changed">
                    <ComboBoxItem Content="Alle anzeigen" Tag="alle" IsSelected="True"/>
                    <ComboBoxItem Content="Monat" Tag="monat"/>
                    <ComboBoxItem Content="Letzte 30 Tage" Tag="30"/>
                    <ComboBoxItem Content="Letzte 90 Tage" Tag="90"/>
                    <ComboBoxItem Content="Letzte 360 Tage" Tag="360"/>
                    <ComboBoxItem Content="Jahr" Tag="jahr"/>
                    <ComboBoxItem Content="Tag" Tag="heute"/>
                </ComboBox>
            </StackPanel>
            <Button Content="Neue Eingangsrechnung" Width="180" Margin="30,0,0,0" Height="35"
                    Background="#0078D4" Foreground="White" Click="Neu_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgEingangsrechnungen" Grid.Row="2" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                  MouseDoubleClick="DataGrid_DoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rechnungs-Nr." Binding="{Binding RechnungsNr}" Width="120"/>
                <DataGridTextColumn Header="Lieferant" Binding="{Binding LieferantName}" Width="200"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding RechnungsDatum, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Faellig" Binding="{Binding FaelligAm, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Netto" Binding="{Binding Netto, StringFormat=N2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Brutto" Binding="{Binding Brutto, StringFormat=N2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="100"/>
                <DataGridTextColumn Header="Bezahlt am" Binding="{Binding BezahltAm, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Bestellung" Binding="{Binding BestellungNr}" Width="100"/>
                <DataGridTextColumn Header="Bemerkung" Binding="{Binding Bemerkung}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <Border Grid.Row="3" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtStatus" Foreground="#666" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtSumme" Foreground="#333" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="30,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Als geprueft markieren" Width="150" Margin="0,0,10,0" Click="AlsGeprueft_Click"/>
                    <Button Content="Als bezahlt markieren" Width="150" Click="AlsBezahlt_Click"
                            Background="#28a745" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
