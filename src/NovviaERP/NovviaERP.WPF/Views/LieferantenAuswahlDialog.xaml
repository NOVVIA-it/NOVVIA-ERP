<Window x:Class="NovviaERP.WPF.Views.LieferantenAuswahlDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lieferanten für Bestellung auswählen" Height="450" Width="550"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#F0F0F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Wählen Sie die Lieferanten für die Bestellung (Mehrfachauswahl möglich):"
                   FontWeight="SemiBold" Margin="0,0,0,10" TextWrapping="Wrap"/>

        <!-- Suche -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Suche:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtSuche" Grid.Column="1" TextChanged="Suche_TextChanged"/>
        </Grid>

        <!-- Lieferanten-Liste -->
        <ListBox x:Name="lstLieferanten" Grid.Row="2"
                 SelectionMode="Extended"
                 DisplayMemberPath="DisplayText"
                 MouseDoubleClick="Lieferant_DoubleClick">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="5,3"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Info -->
        <TextBlock Grid.Row="3" x:Name="txtInfo" Foreground="#666" Margin="0,10,0,0"
                   Text="Tipp: Mit Strg+Klick können Sie mehrere Lieferanten auswählen"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Alle auswählen" Click="AlleAuswaehlen_Click" Padding="15,8" Margin="0,0,10,0"/>
            <Button Content="Bestellungen erstellen" Click="Auswaehlen_Click" Padding="20,8"
                    Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"
                    IsDefault="True"/>
            <Button Content="Abbrechen" Click="Abbrechen_Click" Padding="20,8" Margin="10,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
