<Page x:Class="NovviaERP.WPF.Views.EmailVorlagenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="E-Mail-Vorlagen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Linke Spalte: Vorlagen-Liste -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#F5F5F5" Padding="15" CornerRadius="8,8,0,0">
                    <TextBlock Text="ðŸ“§ E-Mail-Vorlagen" FontSize="16" FontWeight="SemiBold"/>
                </Border>
                
                <ComboBox Grid.Row="1" x:Name="cbTypFilter" Margin="10" SelectionChanged="CbTypFilter_SelectionChanged">
                    <ComboBoxItem Content="Alle Typen" IsSelected="True"/>
                    <ComboBoxItem Content="Rechnung"/>
                    <ComboBoxItem Content="Lieferschein"/>
                    <ComboBoxItem Content="Auftragsbestaetigung"/>
                    <ComboBoxItem Content="Angebot"/>
                    <ComboBoxItem Content="Mahnung"/>
                </ComboBox>
                
                <ListBox Grid.Row="2" x:Name="lstVorlagen" BorderThickness="0"
                         SelectionChanged="LstVorlagen_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="â˜…" Foreground="#FFC107" Margin="8,0,0,0"
                                                   Visibility="{Binding IstStandardVisibility}"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Text="{Binding Typ}" FontSize="11" Foreground="#666"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10">
                    <Button Content="+ Neu" Width="70" Height="30" Click="BtnNeu_Click"/>
                    <Button Content="ðŸ“‹" Width="35" Height="30" Margin="5,0,0,0" ToolTip="Duplizieren" Click="BtnDuplizieren_Click"/>
                    <Button Content="ðŸ—‘ï¸" Width="35" Height="30" Margin="5,0,0,0" Click="BtnLoeschen_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Rechte Spalte: Editor -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Kopfbereich -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <TextBlock Text="Name" FontSize="11" Foreground="#666"/>
                        <TextBox x:Name="txtName"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                        <TextBlock Text="Typ" FontSize="11" Foreground="#666"/>
                        <ComboBox x:Name="cbTyp">
                            <ComboBoxItem Content="Rechnung"/>
                            <ComboBoxItem Content="Lieferschein"/>
                            <ComboBoxItem Content="Auftragsbestaetigung"/>
                            <ComboBoxItem Content="Angebot"/>
                            <ComboBoxItem Content="Mahnung"/>
                            <ComboBoxItem Content="Gutschrift"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
                        <TextBlock Text="Betreff" FontSize="11" Foreground="#666"/>
                        <TextBox x:Name="txtBetreff"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                        <CheckBox x:Name="chkStandard" Content="Standard-Vorlage" Margin="0,0,20,0"/>
                        <CheckBox x:Name="chkHtml" Content="HTML-Format" Margin="0,0,20,0"/>
                        <CheckBox x:Name="chkAktiv" Content="Aktiv" IsChecked="True"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Textbereich -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#F5F5F5" Padding="10" CornerRadius="8,8,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="E-Mail-Text" FontWeight="SemiBold"/>
                                <Button Content="Vorschau" Width="80" Height="24" Margin="20,0,0,0" Click="BtnVorschau_Click"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBox Grid.Row="1" x:Name="txtText" AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Padding="10"
                                 BorderThickness="0"/>
                    </Grid>
                </Border>
                
                <!-- Platzhalter -->
                <Border Grid.Column="1" Background="White" CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#F5F5F5" Padding="10" CornerRadius="8,8,0,0">
                            <TextBlock Text="ðŸ“Ž Platzhalter" FontWeight="SemiBold"/>
                        </Border>
                        
                        <TreeView Grid.Row="1" x:Name="tvPlatzhalter" BorderThickness="0"
                                  MouseDoubleClick="TvPlatzhalter_MouseDoubleClick">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Value}">
                                    <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="11" Cursor="Hand"/>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- AnhÃ¤nge & Buttons -->
            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- AnhÃ¤nge -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ“Ž Feste AnhÃ¤nge:" VerticalAlignment="Center"/>
                        <ItemsControl Grid.Column="1" x:Name="icAnhaenge" Margin="15,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontSize="11"/>
                                            <Button Content="Ã—" Width="16" Height="16" Margin="5,0,0,0"
                                                    Background="Transparent" BorderThickness="0"
                                                    Click="BtnAnhangEntfernen_Click" Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Grid.Column="2" Content="+ Anhang" Width="80" Height="28" Click="BtnAnhangHinzufuegen_Click"/>
                    </Grid>
                </Border>
                
                <!-- Speichern -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0">
                    <Button Content="Speichern" Width="100" Height="35" Click="BtnSpeichern_Click"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
