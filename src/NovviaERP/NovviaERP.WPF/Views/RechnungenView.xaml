<UserControl x:Class="NovviaERP.WPF.Views.RechnungenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:NovviaERP.WPF.Controls"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Rechnungen" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="txtAnzahl" Text="" FontSize="14" Foreground="#888" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtSuche" Width="250" Height="32" Padding="10,5" Margin="0,0,10,0"
                             VerticalContentAlignment="Center" KeyDown="TxtSuche_KeyDown"/>
                    <Button Content="Suchen" Click="Suchen_Click" Padding="15,5" Background="{DynamicResource PrimaryBrush}" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hauptbereich -->
        <Grid x:Name="contentGrid" Grid.Row="1" Margin="15,10,15,10">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="rechnungenRow" Height="2*" MinHeight="100"/>
                <RowDefinition Height="8"/>
                <RowDefinition x:Name="positionenRow" Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!-- Rechnungs-Grid -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <controls:NovviaGrid x:Name="dgRechnungen"
                                     ViewName="RechnungenView"
                                     ShowDateFilter="True"
                                     DateFilterMode="MonthNavigator"
                                     DatePropertyName="DErstellt"
                                     AnzahlText="Rechnungen"
                                     ItemDoubleClick="DG_DoubleClick"
                                     ItemSelected="DG_SelectionChanged">
                    <DataGridTextColumn Header="Rechnungsnr." Binding="{Binding CRechnungsNr}" Width="130"/>
                    <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy}" Width="90" SortMemberPath="DErstellt"/>
                    <DataGridTextColumn Header="Kd-Nr." Binding="{Binding CKundenNr}" Width="80"/>
                    <DataGridTextColumn Header="Kunde" Binding="{Binding KundeName}" Width="150"/>
                    <DataGridTextColumn Header="Firma" Binding="{Binding KundeFirma}" Width="180"/>
                    <DataGridTextColumn Header="Auftrag" Binding="{Binding CAuftragNr}" Width="100"/>
                    <DataGridTextColumn Header="Faellig" Binding="{Binding DFaellig, StringFormat=dd.MM.yyyy}" Width="90" SortMemberPath="DFaellig"/>
                    <DataGridTextColumn Header="Netto" Binding="{Binding FNetto, StringFormat=N2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Brutto" Binding="{Binding FBrutto, StringFormat=N2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Offen" Binding="{Binding Offen, StringFormat=N2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Offen}" Value="0">
                                        <Setter Property="Foreground" Value="#28a745"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Status" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#ffc107"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Bezahlt">
                                                    <Setter Property="Background" Value="#28a745"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Teilbezahlt">
                                                    <Setter Property="Background" Value="#17a2b8"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Ueberfaellig">
                                                    <Setter Property="Background" Value="#dc3545"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Storniert">
                                                    <Setter Property="Background" Value="#6c757d"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Mahnstufe" Binding="{Binding NMahnstufe}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NMahnstufe}" Value="0">
                                        <Setter Property="Foreground" Value="#ccc"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Zahlungsart" Binding="{Binding CZahlungsart}" Width="120"/>
                    <DataGridTextColumn Header="Anmerkung" Binding="{Binding CAnmerkung}" Width="200"/>
                </controls:NovviaGrid>

                <!-- Summenzeile -->
                <Border Grid.Row="1" Background="#e8f4fc" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="1,0,1,1" Padding="10,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="txtSummeAnzahl" Text="0 Rechnungen geladen" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Netto:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="txtSummeNetto" Text="0,00" FontWeight="SemiBold" Width="90" TextAlignment="Right" VerticalAlignment="Center"/>
                            <TextBlock Text="Brutto:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                            <TextBlock x:Name="txtSummeBrutto" Text="0,00" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryBrush}"/>
                            <TextBlock Text="Offen:" VerticalAlignment="Center" Margin="20,0,5,0" Foreground="#dc3545"/>
                            <TextBlock x:Name="txtSummeOffen" Text="0,00" FontWeight="Bold" Foreground="#dc3545" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Horizontaler Splitter -->
            <GridSplitter Grid.Row="1" Height="8" HorizontalAlignment="Stretch"
                          Background="#a0a0a0" Cursor="SizeNS"
                          ResizeDirection="Rows" ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True" Focusable="False" Panel.ZIndex="100"/>

            <!-- Unterer Bereich: Buttons + Positionen -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Buttons-Leiste -->
                <Border Grid.Row="0" Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="10,8" Margin="0,0,0,5">
                    <WrapPanel>
                        <Button x:Name="btnOeffnen" Content="Oeffnen" Padding="12,5" Margin="0,0,5,0" Click="Oeffnen_Click" IsEnabled="False"/>
                        <Button x:Name="btnAuftrag" Content="Auftrag" Padding="12,5" Margin="0,0,5,0" Click="Auftrag_Click" IsEnabled="False"/>
                        <Button x:Name="btnKunde" Content="Kunde" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                        <Button x:Name="btnZahlung" Content="Zahlung erfassen" Padding="12,5" Margin="0,0,5,0"
                                Background="#28a745" Foreground="White" BorderThickness="0" Click="Zahlung_Click" IsEnabled="False"/>
                        <Button x:Name="btnMahnung" Content="Mahnung" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                        <Button x:Name="btnDrucken" Content="Drucken" Padding="12,5" Margin="0,0,5,0" IsEnabled="False"/>
                        <Button x:Name="btnStorno" Content="Stornieren" Padding="12,5" Margin="0,0,5,0"
                                Background="#dc3545" Foreground="White" BorderThickness="0" Click="Storno_Click" IsEnabled="False"/>
                    </WrapPanel>
                </Border>

                <!-- Positionen -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Positionen" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>

                    <DataGrid x:Name="dgPositionen" Grid.Row="1"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              HeadersVisibility="Column" BorderThickness="1" BorderBrush="#ddd">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Artikelnr." Binding="{Binding ArtNr}" Width="100"/>
                            <DataGridTextColumn Header="Positionsname" Binding="{Binding Name}" Width="*" MinWidth="200"/>
                            <DataGridTextColumn Header="Menge" Binding="{Binding Menge, StringFormat=N0}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Netto-VK" Binding="{Binding PreisNetto, StringFormat=N2}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Rabatt %" Binding="{Binding Rabatt, StringFormat=N1}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="MwSt. %" Binding="{Binding MwStSatz, StringFormat=N0}" Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Brutto-VK" Binding="{Binding PreisBrutto, StringFormat=N2}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Statusleiste -->
        <Border Grid.Row="2" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <TextBlock x:Name="txtStatus" Text="Bereit" Foreground="#666"/>
        </Border>
    </Grid>
</UserControl>
