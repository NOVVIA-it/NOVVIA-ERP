<UserControl x:Class="NovviaERP.WPF.Views.KundeDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <Button Content="Zurueck" Click="Zurueck_Click" Padding="10,5" Margin="0,0,20,0"/>
                <TextBlock x:Name="txtTitel" Text="Kunde" FontSize="24" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel x:Name="pnlInhalt">
                <TextBlock x:Name="txtStatus" Text="Lade..." FontSize="16"/>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#f0f0f0" Padding="20,10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Speichern" Click="Speichern_Click" Background="#0078D4" Foreground="White" Padding="20,8" Margin="0,0,10,0"/>
                <Button Content="Abbrechen" Click="Zurueck_Click" Padding="20,8"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
