<Page x:Class="NovviaERP.WPF.Views.KundeDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Kunde" Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="ZurÃ¼ck" Click="Zurueck_Click" Padding="10,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtTitel" Text="Neuer Kunde" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtSubtitel" Text="" FontSize="12" Foreground="#666"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="txtKundenNr" Text="" FontSize="16" Foreground="#0078D4"
                               FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabs -->
        <TabControl Grid.Row="1" Margin="20,15,20,0" x:Name="tabControl">

            <!-- Tab: Adresse -->
            <TabItem Header="Adresse">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte: Anschrift -->
                        <StackPanel>
                            <TextBlock Text="Anschrift" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Anrede:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbAnrede" Grid.Column="1" Height="28">
                                    <ComboBoxItem Content=""/>
                                    <ComboBoxItem Content="Herr"/>
                                    <ComboBoxItem Content="Frau"/>
                                    <ComboBoxItem Content="Firma"/>
                                    <ComboBoxItem Content="Herr und Frau"/>
                                </ComboBox>
                                <TextBox x:Name="txtTitelAdresse" Grid.Column="2" Margin="10,0,0,0" Height="28"
                                         Tag="Titel (Dr., Prof., etc.)"/>

                                <TextBlock Text="Name:" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtVorname" Grid.Row="1" Grid.Column="1" Height="28" Tag="Vorname"/>
                                <TextBox x:Name="txtNachname" Grid.Row="1" Grid.Column="2" Margin="10,0,0,0" Height="28" Tag="Nachname"/>

                                <TextBlock Text="Firma:" Grid.Row="2" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtFirma" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="28"/>

                                <TextBlock Text="Zusatz:" Grid.Row="3" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtZusatz" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Height="28"
                                         Tag="Adresszusatz"/>

                                <TextBlock Text="Strasse:" Grid.Row="4" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtStrasse" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Height="28"/>

                                <TextBlock Text="PLZ / Ort:" Grid.Row="5" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtPLZ" Grid.Row="5" Grid.Column="1" Width="80" HorizontalAlignment="Left" Height="28"/>
                                <TextBox x:Name="txtOrt" Grid.Row="5" Grid.Column="2" Margin="10,0,0,0" Height="28"/>

                                <TextBlock Text="Land:" Grid.Row="6" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbLand" Grid.Row="6" Grid.Column="1" Height="28">
                                    <ComboBoxItem Content="Deutschland" Tag="DE" IsSelected="True"/>
                                    <ComboBoxItem Content="Oesterreich" Tag="AT"/>
                                    <ComboBoxItem Content="Schweiz" Tag="CH"/>
                                    <ComboBoxItem Content="Niederlande" Tag="NL"/>
                                    <ComboBoxItem Content="Belgien" Tag="BE"/>
                                    <ComboBoxItem Content="Frankreich" Tag="FR"/>
                                    <ComboBoxItem Content="Italien" Tag="IT"/>
                                    <ComboBoxItem Content="Polen" Tag="PL"/>
                                </ComboBox>
                                <TextBox x:Name="txtBundesland" Grid.Row="6" Grid.Column="2" Margin="10,0,0,0" Height="28"
                                         Tag="Bundesland"/>
                            </Grid>
                        </StackPanel>

                        <!-- Rechte Spalte: Kontakt -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Kontakt" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Telefon:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtTelefon" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Mobil:" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtMobil" Grid.Row="1" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Fax:" Grid.Row="2" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtFax" Grid.Row="2" Grid.Column="1" Height="28"/>

                                <TextBlock Text="E-Mail:" Grid.Row="3" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1" Height="28"/>

                                <TextBlock Text="Website:" Grid.Row="4" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtWebsite" Grid.Row="4" Grid.Column="1" Height="28"/>

                                <TextBlock Text="USt-ID:" Grid.Row="5" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtUStID" Grid.Row="5" Grid.Column="1" Height="28"
                                         Tag="z.B. DE123456789"/>
                            </Grid>

                            <!-- Weitere Adressen -->
                            <TextBlock Text="Weitere Adressen" FontWeight="SemiBold" FontSize="14" Margin="0,30,0,10"/>
                            <DataGrid x:Name="dgAdressen" Height="120" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                      MouseDoubleClick="DgAdressen_DoubleClick">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Typ" Binding="{Binding AdressTypText}" Width="100"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding CName}" Width="120"/>
                                    <DataGridTextColumn Header="Ort" Binding="{Binding COrt}" Width="100"/>
                                    <DataGridCheckBoxColumn Header="Std." Binding="{Binding IstStandard}" Width="50"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Content="+ Adresse" Click="NeueAdresse_Click" Padding="10,3"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Konditionen -->
            <TabItem Header="Konditionen">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte -->
                        <StackPanel>
                            <TextBlock Text="Kundengruppe &amp; Rabatt" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Kundengruppe:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbKundengruppe" Grid.Column="1" Height="28"
                                          DisplayMemberPath="CName" SelectedValuePath="KKundenGruppe"/>

                                <TextBlock Text="Rabatt (%):" Grid.Row="1" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtRabatt" Grid.Row="1" Grid.Column="1" Width="80"
                                         HorizontalAlignment="Left" Height="28" Text="0"/>

                                <TextBlock Text="Debitorennr.:" Grid.Row="2" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtDebitorennr" Grid.Row="2" Grid.Column="1" Width="120"
                                         HorizontalAlignment="Left" Height="28"/>
                            </Grid>

                            <TextBlock Text="Zahlung" FontWeight="SemiBold" FontSize="14" Margin="0,30,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Zahlungsart:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbZahlungsart" Grid.Column="1" Height="28"
                                          DisplayMemberPath="CName" SelectedValuePath="KZahlungsart"/>

                                <TextBlock Text="Zahlungsziel:" Grid.Row="1" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="txtZahlungsziel" Width="60" Height="28" Text="14"/>
                                    <TextBlock Text="Tage" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="Skonto (%):" Grid.Row="2" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="txtSkonto" Width="60" Height="28" Text="0"/>
                                    <TextBlock Text="% bei" VerticalAlignment="Center" Margin="8,0"/>
                                    <TextBox x:Name="txtSkontoTage" Width="40" Height="28" Text="0"/>
                                    <TextBlock Text="Tagen" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="Kreditlimit:" Grid.Row="3" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="txtKreditlimit" Width="100" Height="28" Text="0"/>
                                    <TextBlock Text="EUR" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Rechte Spalte -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Mahnwesen" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Mahnstopp:" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkMahnstopp" Grid.Column="1" VerticalAlignment="Center"/>

                                <TextBlock Text="Mahnrhythmus:" Grid.Row="1" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="txtMahnrhythmus" Width="60" Height="28" Text="14"/>
                                    <TextBlock Text="Tage" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Status" FontWeight="SemiBold" FontSize="14" Margin="0,30,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Gesperrt:" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkGesperrt" Grid.Column="1" VerticalAlignment="Center"/>

                                <TextBlock Text="Newsletter:" Grid.Row="1" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkNewsletter" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Text="Steuer" FontWeight="SemiBold" FontSize="14" Margin="0,30,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Steuernr.:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtSteuernr" Grid.Column="1" Height="28"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Statistik -->
            <TabItem Header="Statistik">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Kundenstatistik" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Kunde seit:" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtKundeSeit" Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold"/>

                            <TextBlock Text="Anzahl Bestellungen:" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtAnzahlBestellungen" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold"/>

                            <TextBlock Text="Gesamtumsatz:" Grid.Row="2" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtGesamtumsatz" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"
                                       FontWeight="SemiBold" Foreground="#0078D4"/>

                            <TextBlock Text="Letzte Bestellung:" Grid.Row="3" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtLetzteBestellung" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="Letzte Bestellungen" FontWeight="SemiBold" FontSize="14" Margin="0,30,0,15"/>
                        <DataGrid x:Name="dgBestellungen" Height="200" AutoGenerateColumns="False" IsReadOnly="True"
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Bestellnr." Binding="{Binding CBestellNr}" Width="100"/>
                                <DataGridTextColumn Header="Datum" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy}" Width="90"/>
                                <DataGridTextColumn Header="Betrag" Binding="{Binding GesamtBrutto, StringFormat=N2}" Width="90"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding CStatus}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Notizen -->
            <TabItem Header="Notizen">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Interne Notizen" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtNotizen" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>

            <!-- Tab: Validierung -->
            <TabItem Header="Validierung">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="400" HorizontalAlignment="Left">
                        <!-- Validierung GroupBox -->
                        <GroupBox Header="Validierung" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="chkKundeAmbient" Content="Ambient" Margin="0,5,0,10"/>
                                <CheckBox x:Name="chkKundeCool" Content="Cool" Margin="0,0,0,10"/>
                                <CheckBox x:Name="chkKundeMedcan" Content="Medcan" Margin="0,0,0,10"/>
                                <CheckBox x:Name="chkKundeTierarznei" Content="Tierarznei" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Qualifikation -->
                        <TextBlock Text="QualifiziertAm" FontWeight="Normal" Margin="0,0,0,5"/>
                        <DatePicker x:Name="dpKundeQualifiziertAm" Width="200" HorizontalAlignment="Left" Margin="0,0,0,15"/>

                        <TextBlock Text="QualifiziertVon" FontWeight="Normal" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtKundeQualifiziertVon" Height="28" Margin="0,0,0,15"/>

                        <TextBlock Text="GDP" FontWeight="Normal" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtKundeGDP" Height="28" Margin="0,0,0,15"/>

                        <TextBlock Text="GMP" FontWeight="Normal" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtKundeGMP" Height="28" Margin="0,0,0,15"/>

                        <!-- Speichern Button -->
                        <Button Content="Validierung speichern" Click="ValidierungSpeichern_Click"
                                Padding="15,8" HorizontalAlignment="Left" Margin="0,10,0,0"
                                Background="#0078D4" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Eigene Felder -->
            <TabItem Header="Eigene Felder">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Benutzerdefinierte Felder" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="+ Neues Feld" Click="NeuesEigenesFeld_Click"
                                    Padding="10,5" Background="#f0f0f0"/>
                        </Grid>
                        <TextBlock x:Name="txtKeineEigenenFelder" Text="Keine eigenen Felder definiert."
                                   Foreground="#888" Margin="0,20,0,0"/>
                        <!-- Dynamisch generierte Felder -->
                        <StackPanel x:Name="pnlEigeneFelder" Margin="0,15,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer mit Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="#ddd" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Text="" Foreground="#666" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Abbrechen" Click="Zurueck_Click" Padding="20,8" Margin="0,0,10,0"/>
                    <Button Content="Speichern" Click="Speichern_Click" Padding="20,8"
                            Background="#0078D4" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
