<UserControl x:Class="NovviaERP.WPF.Views.KundenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NovviaERP.WPF.Converters"
             Background="#f0f2f5">
    <UserControl.Resources>
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="FilterTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
        </Style>
        <Style x:Key="FilterComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Background" Value="#f0f0f0"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="kundenlisteRow" Height="2*" MinHeight="100"/>
            <RowDefinition Height="8"/>
            <RowDefinition x:Name="detailsRow" Height="*" MinHeight="100"/>
        </Grid.RowDefinitions>

        <!-- OBERER BEREICH: Kundenliste -->
        <Border Grid.Row="0" Background="White" BorderBrush="#ccc" BorderThickness="1" Margin="5,5,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header: Kunden suchen -->
                <Border Background="#e8e8e8" Padding="8,6" BorderBrush="#ccc" BorderThickness="0,0,0,1">
                    <TextBlock Text="Kunden suchen" FontWeight="SemiBold" FontSize="12"/>
                </Border>

                <!-- Filterleiste -->
                <Grid Grid.Row="1" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtSuche" Style="{StaticResource FilterTextBox}"
                             KeyDown="TxtSuche_KeyDown" ToolTip="Eingeben oder Filter waehlen..."/>
                    <Button Grid.Column="1" Content="T" Width="24" Height="24" Margin="2,0" ToolTip="Filter"/>
                    <TextBox Grid.Column="2" x:Name="txtPLZ" Style="{StaticResource FilterTextBox}" Margin="5,0,0,0" ToolTip="PLZ"/>
                    <TextBlock Grid.Column="3" Text="PLZ" VerticalAlignment="Center" Margin="3,0,8,0" Foreground="#888" FontSize="10"/>
                    <TextBox Grid.Column="4" x:Name="txtAuftragRechnung" Style="{StaticResource FilterTextBox}" ToolTip="Auftrags-/Rechnungsnummer..."/>
                    <ComboBox Grid.Column="5" x:Name="cboKategorie" Style="{StaticResource FilterComboBox}" Width="100" Margin="8,0"
                              SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="Alle Kategorien" IsSelected="True"/>
                    </ComboBox>
                    <ComboBox Grid.Column="6" x:Name="cboKundengruppe" Style="{StaticResource FilterComboBox}"
                              SelectionChanged="Filter_Changed">
                        <ComboBoxItem Content="Alle Gruppen" IsSelected="True"/>
                    </ComboBox>
                    <TextBox Grid.Column="7" x:Name="txtLabel" Style="{StaticResource FilterTextBox}" Width="100" Margin="8,0" ToolTip="Label suchen..."/>
                    <StackPanel Grid.Column="8" Orientation="Horizontal">
                        <Button Content="ðŸ”„" Width="28" Height="24" Click="FilterReset_Click" ToolTip="Filter zurÃ¼cksetzen" FontSize="12"/>
                        <Button Content="ðŸ” Suchen" Margin="5,0,0,0" Padding="10,3" Click="Suchen_Click"
                                Background="#0078D4" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>

                <!-- Kundenliste DataGrid - Styling durch GridStyleHelper -->
                <DataGrid x:Name="dgKunden" Grid.Row="2" Margin="0"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow"
                          HeadersVisibility="Column" BorderThickness="0"
                          MouseDoubleClick="DG_DoubleClick" SelectionChanged="DG_SelectionChanged"
                          CanUserResizeColumns="True" CanUserReorderColumns="True">
                    <!-- ColumnHeaderStyle wird programmatisch von GridStyleHelper gesetzt -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kundennummer" Binding="{Binding CKundenNr}" Width="60"/>
                        <DataGridTextColumn Header="Firma" Binding="{Binding CFirma}" Width="133"/>
                        <DataGridTextColumn Header="Nachname" Binding="{Binding CName}" Width="99"/>
                        <DataGridTextColumn Header="Vorname" Binding="{Binding CVorname}" Width="89"/>
                        <DataGridTextColumn Header="Telefon" Binding="{Binding CTel}" Width="142"/>
                        <DataGridTextColumn Header="Mobil" Binding="{Binding CMobil}" Width="106"/>
                        <DataGridTextColumn Header="E-Mail" Binding="{Binding CMail}" Width="196"/>
                        <DataGridTextColumn Header="PLZ" Binding="{Binding CPLZ}" Width="52"/>
                        <DataGridTextColumn Header="Ort" Binding="{Binding COrt}" Width="127"/>
                        <DataGridTextColumn Header="Strasse" Binding="{Binding CStrasse}" Width="169"/>
                        <DataGridTextColumn Header="Land" Binding="{Binding CLand}" Width="78"/>
                        <DataGridTextColumn Header="Kundengruppe" Binding="{Binding Kundengruppe}" Width="94"/>
                        <DataGridTextColumn Header="Kategorie" Binding="{Binding Kategorie}" Width="94"/>
                        <DataGridTextColumn Header="Webseite" Binding="{Binding CWww}" Width="192"/>
                        <DataGridTextColumn Header="Label" Binding="{Binding CLabel}" Width="120"/>
                        <DataGridTextColumn Header="Ust-IdNr." Binding="{Binding CUstId}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Statuszeile -->
                <Border Grid.Row="3" Background="#f5f5f5" Padding="8,4" BorderBrush="#ddd" BorderThickness="0,1,0,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock x:Name="txtAnzahl" Text="0 Kunde(n)" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Button Content="Weitere laden" Padding="8,2" FontSize="11" Click="WeitereKundenLaden_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Aktionsleiste -->
                <Border Grid.Row="4" Background="#f0f0f0" Padding="8,6" BorderBrush="#ccc" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="âž• Kunde anlegen" Style="{StaticResource ActionButton}" Click="Neu_Click"/>
                        <Button Content="ðŸ‘¤ Kunde" Style="{StaticResource ActionButton}" x:Name="btnKunde" IsEnabled="False">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="âœï¸ Bearbeiten" Click="Bearbeiten_Click"/>
                                    <MenuItem Header="ðŸ—‘ï¸ LÃ¶schen" Click="Loeschen_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                        <Button Content="ðŸ–¨ï¸ Ausgabe" Style="{StaticResource ActionButton}" x:Name="btnAusgabe" IsEnabled="False"/>
                        <Button Content="âœ‰ï¸ Nachricht senden" Style="{StaticResource ActionButton}" x:Name="btnNachricht" IsEnabled="False"/>
                        <Button Content="âš¡ Workflow" Style="{StaticResource ActionButton}" x:Name="btnWorkflow" IsEnabled="False"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- BEWEGLICHER TRENNBALKEN (Haupt) -->
        <GridSplitter Grid.Row="1" Height="8" HorizontalAlignment="Stretch" Background="#a0a0a0"
                      ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" Cursor="SizeNS"
                      ShowsPreview="True" Focusable="False" Panel.ZIndex="100"/>

        <!-- UNTERER BEREICH: Details + Historie -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- LINKE SEITE: Kundendetails + Tabs -->
            <Grid x:Name="detailGrid" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="sichtRow" Height="2*" MinHeight="80"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition x:Name="tabsRow" Height="*" MinHeight="80"/>
                </Grid.RowDefinitions>

                <!-- 360-Grad Sicht -->
                <Border Background="White" BorderBrush="#ccc" BorderThickness="1" Margin="5,5,2,0">
                    <Grid>
                        <!-- Placeholder wenn kein Kunde ausgewaehlt -->
                        <StackPanel x:Name="pnlNoSelection" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Kunde auswaehlen" FontSize="14" Foreground="#999" HorizontalAlignment="Center"/>
                            <TextBlock Text="Waehlen Sie einen Kunden aus der Liste" FontSize="11" Foreground="#bbb" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <Grid x:Name="pnlDetails" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte: Kontaktdaten -->
                        <Border BorderBrush="#ddd" BorderThickness="0,0,1,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header: 360-Sicht -->
                                <Border Background="#4a90d9" Padding="10,6">
                                    <TextBlock Text="360-Sicht (Strg+I)" Foreground="White" FontSize="11"/>
                                </Border>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="10">
                                        <TextBlock x:Name="txtKundeAnrede" Text="Herr" FontSize="11" Foreground="#666"/>
                                        <TextBlock x:Name="txtKundeName" Text="Max Mustermann" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock x:Name="txtKundeFirma" Text="Musterfirma GmbH" FontSize="12" Foreground="#666" Margin="0,2,0,0"/>
                                        <TextBlock x:Name="txtKundeNr" Text="2605190" FontSize="11" Foreground="#888" Margin="0,5,0,10"/>

                                        <TextBlock x:Name="txtKundeAdresse1" Text="Musterstrasse 123" FontSize="11"/>
                                        <TextBlock x:Name="txtKundeAdresse2" Text="12345 Musterstadt" FontSize="11"/>
                                        <TextBlock x:Name="txtKundeLand" Text="Deutschland" FontSize="11" Margin="0,0,0,10"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <TextBlock Text="ðŸ“ž" Width="20" FontSize="11"/>
                                            <TextBlock x:Name="txtKundeTel" Text="-" FontSize="11"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <TextBlock Text="ðŸ“±" Width="20" FontSize="11"/>
                                            <TextBlock x:Name="txtKundeMobil" Text="-" FontSize="11"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <TextBlock Text="ðŸ“ " Width="20" FontSize="11"/>
                                            <TextBlock x:Name="txtKundeFax" Text="-" FontSize="11"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                                            <TextBlock Text="ðŸ“§" Width="20" FontSize="11"/>
                                            <TextBlock x:Name="txtKundeMail" Text="email@beispiel.de" FontSize="11" Foreground="#0066CC"
                                                       Cursor="Hand" TextDecorations="Underline"/>
                                        </StackPanel>

                                        <!-- Status Icons -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Border x:Name="iconRechnung" Background="#e3f2fd" Padding="6,2" Margin="0,0,5,0" CornerRadius="3">
                                                <TextBlock Text="ðŸ§¾ Rechnung" FontSize="10" Foreground="#1976d2"/>
                                            </Border>
                                            <Border x:Name="iconGesperrt" Background="#ffebee" Padding="6,2" Margin="0,0,5,0" CornerRadius="3" Visibility="Collapsed">
                                                <TextBlock Text="ðŸš« Gesperrt" FontSize="10" Foreground="#c62828"/>
                                            </Border>
                                            <Border x:Name="iconMahnstopp" Background="#fff3e0" Padding="6,2" CornerRadius="3" Visibility="Collapsed">
                                                <TextBlock Text="âš ï¸ Mahnstopp" FontSize="10" Foreground="#ef6c00"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Rechte Spalte: Statistiken -->
                        <Grid Grid.Column="1" Margin="8,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Zeile 1: Letzter Auftrag, Offene Auftraege -->
                            <Grid Grid.Row="0" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ“¦ Letzter Auftrag:" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="txtStatLetzterAuftrag" Grid.Column="1" Text="-" Style="{StaticResource StatValue}"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="â³ Offene AuftrÃ¤ge:" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="txtStatOffeneAuftraege" Grid.Column="1" Text="0 / 0,00 EUR" Style="{StaticResource StatValue}"/>
                                </Grid>
                            </Grid>

                            <!-- Zeile 2: Kunde seit, Offene Rechnungen -->
                            <Grid Grid.Row="1" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ“… Kunde seit:" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="txtStatKundeSeit" Grid.Column="1" Text="-" Style="{StaticResource StatValue}"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ§¾ Offene Rechng.:" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="txtStatOffeneRechnungen" Grid.Column="1" Text="0 / 0,00 EUR" Style="{StaticResource StatValue}"/>
                                </Grid>
                            </Grid>

                            <Rectangle Grid.Row="2" Height="1" Fill="#e0e0e0" Margin="0,3,0,5"/>

                            <!-- Weitere Statistiken -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ’° Umsatz:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatUmsatz" Grid.Column="1" Text="0,00 EUR" Style="{StaticResource StatValue}" Foreground="#28a745"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ“ˆ Gewinn:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatGewinn" Grid.Column="1" Text="0,00 EUR" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ›’ Warenkorb:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatWarenkorb" Grid.Column="1" Text="0,00 EUR" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ“Š AuftrÃ¤ge:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatAuftraege" Grid.Column="1" Text="0" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="â†©ï¸ Retouren:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatRetouren" Grid.Column="1" Text="0 / 0" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="âŒ Stornos:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatStornos" Grid.Column="1" Text="0 / 0" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸŽŸï¸ Coupon:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatCoupon" Grid.Column="1" Text="0 / 0" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ’³ Guthaben:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatGuthaben" Grid.Column="1" Text="0,00 EUR" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ·ï¸ Rabatt:" Style="{StaticResource StatLabel}"/>
                                        <TextBlock x:Name="txtStatRabatt" Grid.Column="1" Text="0 %" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ“ Anmerkung:" Style="{StaticResource StatLabel}"/>
                                        <TextBox x:Name="txtAnmerkung" Grid.Column="1" Height="18" FontSize="10" IsReadOnly="True"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="ðŸ“¬ Newsletter:" Style="{StaticResource StatLabel}"/>
                                        <CheckBox x:Name="chkNewsletter" Grid.Column="1" IsEnabled="False"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Splitter zwischen 360-Sicht und Tabs -->
                <GridSplitter Grid.Row="1" Height="8" HorizontalAlignment="Stretch" Background="#a0a0a0"
                              ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" Cursor="SizeNS"
                              ShowsPreview="True" Focusable="False" Panel.ZIndex="100"/>

                <!-- Tabs unten links: Auftraege, Rechnungen etc -->
                <Border Grid.Row="2" Background="White" BorderBrush="#ccc" BorderThickness="1" Margin="5,0,2,5" ClipToBounds="True">
                    <TabControl x:Name="pnlTabs" Margin="0" BorderThickness="0" Padding="0" Visibility="Collapsed">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Padding" Value="12,5"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </TabControl.Resources>

                        <TabItem Header="Auftraege">
                            <DataGrid x:Name="dgKundeAuftraege" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column" BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Auftragsnummer" Width="110">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CBestellNr}" Foreground="#0066CC" Cursor="Hand"
                                                           MouseLeftButtonUp="AuftragNr_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Erstellt am" Binding="{Binding DErstellt, StringFormat=dd.MM.yyyy}" Width="85"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding CStatus}" Width="90"/>
                                    <DataGridTextColumn Header="Brutto" Binding="{Binding GesamtBrutto, StringFormat=N2}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Offen" Binding="{Binding OffenerBetrag, StringFormat=N2}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Foreground" Value="#dc3545"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Zahlungsart" Binding="{Binding CZahlungsart}" Width="110"/>
                                    <DataGridTextColumn Header="Versandart" Binding="{Binding CVersandart}" Width="110"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="Rechnungen">
                            <DataGrid x:Name="dgKundeRechnungen" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column" BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Rechnungsnummer" Width="130">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CRechnungsNr}" Foreground="#0066CC" Cursor="Hand"
                                                           MouseLeftButtonUp="RechnungNr_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Datum" Binding="{Binding DRechnungsdatum, StringFormat=dd.MM.yyyy}" Width="90"/>
                                    <DataGridTextColumn Header="Brutto" Binding="{Binding FBetragBrutto, StringFormat=N2}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Bezahlt" Binding="{Binding FBezahlt, StringFormat=N2}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Offen" Binding="{Binding Offen, StringFormat=N2}" Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Foreground" Value="#dc3545"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="ðŸ“ Adressen">
                            <DataGrid x:Name="dgKundeAdressen" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column" BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="â­" Binding="{Binding StandardIcon}" Width="30"/>
                                    <DataGridTextColumn Header="Typ" Binding="{Binding AdressTypText}" Width="120"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding CName}" Width="120"/>
                                    <DataGridTextColumn Header="Strasse" Binding="{Binding CStrasse}" Width="150"/>
                                    <DataGridTextColumn Header="PLZ" Binding="{Binding CPLZ}" Width="60"/>
                                    <DataGridTextColumn Header="Ort" Binding="{Binding COrt}" Width="120"/>
                                    <DataGridTextColumn Header="Land" Binding="{Binding CLand}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="ðŸ‘¤ Ansprechpartner">
                            <DataGrid x:Name="dgAnsprechpartner" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column" BorderThickness="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding CName}" Width="150"/>
                                    <DataGridTextColumn Header="Position" Binding="{Binding CPosition}" Width="120"/>
                                    <DataGridTextColumn Header="Telefon" Binding="{Binding CTel}" Width="120"/>
                                    <DataGridTextColumn Header="E-Mail" Binding="{Binding CMail}" Width="180"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                    </TabControl>
                </Border>
            </Grid>

            <!-- RECHTE SEITE: Kundenhistorie -->
            <Border Grid.Column="1" Background="White" BorderBrush="#ccc" BorderThickness="1" Margin="2,0,5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header: Kundenhistorie -->
                    <Border Background="#f5a623" Padding="10,6">
                        <TextBlock Text="Kundenhistorie" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>

                    <!-- Historie Liste -->
                    <ListBox x:Name="lstHistorie" Grid.Row="1" BorderThickness="0" FontSize="11"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Border Width="24" Height="24" CornerRadius="12" Background="{Binding IconBg}" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Icon}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontSize="12" Foreground="White"/>
                                    </Border>

                                    <!-- Inhalt -->
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="{Binding Beschreibung}" TextWrapping="Wrap" FontSize="11"/>
                                        <TextBlock Text="{Binding DatumFormatiert}" FontSize="10" Foreground="#888" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Placeholder wenn keine Historie -->
                    <TextBlock x:Name="txtKeineHistorie" Grid.Row="1" Text="Keine Historie vorhanden"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#999" FontSize="11" Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
