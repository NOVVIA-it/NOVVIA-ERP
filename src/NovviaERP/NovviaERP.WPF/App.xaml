<Application x:Class="NovviaERP.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:NovviaERP.WPF.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <conv:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:BestellStatusConverter x:Key="BestellStatusConverter"/>
        <conv:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    </Application.Resources>
</Application>
